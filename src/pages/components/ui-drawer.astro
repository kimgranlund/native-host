---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-drawer">
  <main>
<h1>&lt;ui-drawer&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Slide-in panel from any edge. Uses native <code>&lt;dialog&gt;</code> for top-layer + inert.
    </p>

    <!-- ── Right (default) ── -->

    <h2>Right (default)</h2>
    <div class="layout-section">
      <ui-button id="open-right"><span slot="label">Open Right Drawer</span></ui-button>
      <ui-drawer id="drawer-right">
        <ui-header>
          <span slot="label">Settings</span>
          <ui-button slot="trailing" variant="ghost" id="close-right"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <ui-field>
            <label slot="label">Display name</label>
            <ui-input placeholder="Kim Granlund"></ui-input>
          </ui-field>
          <ui-field>
            <label slot="label">Email</label>
            <ui-input placeholder="kim@example.com"></ui-input>
          </ui-field>
          <ui-switch>Dark mode</ui-switch>
        </ui-body>
      </ui-drawer>
      <pre class="layout-code"><code>&lt;ui-button id="open-right"&gt;
  &lt;span slot="label"&gt;Open Right Drawer&lt;/span&gt;
&lt;/ui-button&gt;

&lt;ui-drawer id="drawer-right"&gt;
  &lt;ui-header&gt;
    &lt;span slot="label"&gt;Settings&lt;/span&gt;
    &lt;ui-button slot="trailing" variant="ghost" id="close-right"&gt;
      &lt;ui-icon name="x"&gt;&lt;/ui-icon&gt;
    &lt;/ui-button&gt;
  &lt;/ui-header&gt;
  &lt;ui-body&gt;
    &lt;ui-field&gt;
      &lt;label slot="label"&gt;Display name&lt;/label&gt;
      &lt;ui-input placeholder="Kim Granlund"&gt;&lt;/ui-input&gt;
    &lt;/ui-field&gt;
  &lt;/ui-body&gt;
&lt;/ui-drawer&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Left ── -->

    <h2>Left</h2>
    <div class="layout-section">
      <ui-button id="open-left"><span slot="label">Open Left Drawer</span></ui-button>
      <ui-drawer id="drawer-left" side="left">
        <ui-header>
          <span slot="label">Documentation</span>
          <ui-button slot="trailing" variant="ghost" id="close-left"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <ui-nav>
            <ui-option-group>
              <ui-option-group-header><ui-icon name="house"></ui-icon> Getting Started</ui-option-group-header>
              <ui-option value="install">Installation</ui-option>
              <ui-option value="structure">Project Structure</ui-option>
            </ui-option-group>
            <ui-option-group>
              <ui-option-group-header><ui-icon name="rocket-launch"></ui-icon> Build Your Application</ui-option-group-header>
              <ui-option value="routing">Routing</ui-option>
              <ui-option value="data">Data Fetching</ui-option>
              <ui-option value="caching">Caching</ui-option>
              <ui-option value="styling">Styling</ui-option>
              <ui-option value="optimizing">Optimizing</ui-option>
            </ui-option-group>
            <ui-option-group>
              <ui-option-group-header><ui-icon name="book-open"></ui-icon> Reference</ui-option-group-header>
              <ui-option value="api">API Reference</ui-option>
              <ui-option value="config">Configuration</ui-option>
              <ui-option value="examples">Examples</ui-option>
            </ui-option-group>
          </ui-nav>
        </ui-body>
      </ui-drawer>
      <pre class="layout-code"><code>&lt;ui-drawer id="drawer-left" side="left"&gt;
  &lt;ui-header&gt;
    &lt;span slot="label"&gt;Documentation&lt;/span&gt;
    &lt;ui-button slot="trailing" variant="ghost"&gt;
      &lt;ui-icon name="x"&gt;&lt;/ui-icon&gt;
    &lt;/ui-button&gt;
  &lt;/ui-header&gt;
  &lt;ui-body&gt;...&lt;/ui-body&gt;
&lt;/ui-drawer&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Bottom ── -->

    <h2>Bottom</h2>
    <div class="layout-section">
      <ui-button id="open-bottom"><span slot="label">Open Bottom Drawer</span></ui-button>
      <ui-drawer id="drawer-bottom" side="bottom">
        <ui-header>
          <span slot="label">Filters</span>
          <ui-button slot="trailing" variant="ghost" id="close-bottom"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <ui-stack direction="row" gap="2" wrap>
            <ui-checkbox>In Stock</ui-checkbox>
            <ui-checkbox>On Sale</ui-checkbox>
            <ui-checkbox>Free Shipping</ui-checkbox>
          </ui-stack>
        </ui-body>
      </ui-drawer>
      <pre class="layout-code"><code>&lt;ui-drawer id="drawer-bottom" side="bottom"&gt;
  &lt;ui-header&gt;
    &lt;span slot="label"&gt;Filters&lt;/span&gt;
    &lt;ui-button slot="trailing" variant="ghost"&gt;
      &lt;ui-icon name="x"&gt;&lt;/ui-icon&gt;
    &lt;/ui-button&gt;
  &lt;/ui-header&gt;
  &lt;ui-body&gt;
    &lt;ui-stack direction="row" gap="2" wrap&gt;
      &lt;ui-checkbox&gt;In Stock&lt;/ui-checkbox&gt;
      &lt;ui-checkbox&gt;On Sale&lt;/ui-checkbox&gt;
    &lt;/ui-stack&gt;
  &lt;/ui-body&gt;
&lt;/ui-drawer&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Top ── -->

    <h2>Top</h2>
    <div class="layout-section">
      <ui-button id="open-top"><span slot="label">Open Top Drawer</span></ui-button>
      <ui-drawer id="drawer-top" side="top">
        <ui-header>
          <span slot="label">Announcement</span>
          <ui-button slot="trailing" variant="ghost" id="close-top"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <p style="margin: 0; font-size: 0.875rem;">This drawer slides in from the top edge.</p>
        </ui-body>
      </ui-drawer>
    </div>

    <!-- ── With Footer ── -->

    <h2>With Footer</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 0.75rem;">Header and footer stay fixed while the body scrolls independently.</p>
      <ui-button id="open-footer"><span slot="label">Open Drawer with Footer</span></ui-button>
      <ui-drawer id="drawer-footer">
        <ui-header>
          <span slot="label">Edit Profile</span>
          <ui-button slot="trailing" variant="ghost" id="close-footer"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <ui-field>
            <label slot="label">Display name</label>
            <ui-input placeholder="Kim Granlund"></ui-input>
          </ui-field>
          <ui-field>
            <label slot="label">Email</label>
            <ui-input placeholder="kim@example.com"></ui-input>
          </ui-field>
          <ui-field>
            <label slot="label">Bio</label>
            <ui-textarea placeholder="Tell us about yourself..." rows="4"></ui-textarea>
          </ui-field>
          <ui-switch>Dark mode</ui-switch>
          <p style="margin: 0; font-size: 0.8125rem; color: var(--neutral-ink-muted);">Additional content to demonstrate scrolling within the body region while header and footer remain fixed.</p>
          <p style="margin: 0; font-size: 0.8125rem; color: var(--neutral-ink-muted);">Scroll down to verify that the header and footer remain fixed while this body content scrolls independently.</p>
        </ui-body>
        <ui-footer justify="spread">
          <ui-button variant="ghost" id="cancel-footer"><span slot="label">Cancel</span></ui-button>
          <ui-button variant="primary" intent="accent"><span slot="label">Save Changes</span></ui-button>
        </ui-footer>
      </ui-drawer>
      <pre class="layout-code"><code>&lt;ui-drawer id="drawer-footer"&gt;
  &lt;ui-header&gt;
    &lt;span slot="label"&gt;Edit Profile&lt;/span&gt;
    &lt;ui-button slot="trailing" variant="ghost"&gt;
      &lt;ui-icon name="x"&gt;&lt;/ui-icon&gt;
    &lt;/ui-button&gt;
  &lt;/ui-header&gt;
  &lt;ui-body&gt;
    &lt;ui-field&gt;
      &lt;label slot="label"&gt;Display name&lt;/label&gt;
      &lt;ui-input placeholder="Kim Granlund"&gt;&lt;/ui-input&gt;
    &lt;/ui-field&gt;
  &lt;/ui-body&gt;
  &lt;ui-footer justify="spread"&gt;
    &lt;ui-button variant="ghost"&gt;Cancel&lt;/ui-button&gt;
    &lt;ui-button variant="primary" intent="accent"&gt;Save Changes&lt;/ui-button&gt;
  &lt;/ui-footer&gt;
&lt;/ui-drawer&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Close Prevention ── -->

    <h2>Close Prevention</h2>
    <div class="layout-section">
      <div class="layout-row">
        <ui-button id="open-no-escape"><span slot="label">No Close on Escape</span></ui-button>
        <ui-button id="open-no-backdrop"><span slot="label">No Close on Backdrop</span></ui-button>
        <ui-button id="open-persistent"><span slot="label">Persistent (both)</span></ui-button>
      </div>
      <ui-drawer id="drawer-no-escape" no-close-on-escape>
        <ui-header>
          <span slot="label">No Escape Close</span>
          <ui-button slot="trailing" variant="ghost" id="close-no-escape"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <p style="margin: 0; font-size: 0.875rem;">Pressing Escape won't close this drawer. Use the close button.</p>
        </ui-body>
      </ui-drawer>
      <ui-drawer id="drawer-no-backdrop" no-close-on-backdrop>
        <ui-header>
          <span slot="label">No Backdrop Close</span>
          <ui-button slot="trailing" variant="ghost" id="close-no-backdrop"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <p style="margin: 0; font-size: 0.875rem;">Clicking the backdrop won't close this drawer. Use the close button or Escape.</p>
        </ui-body>
      </ui-drawer>
      <ui-drawer id="drawer-persistent" no-close-on-escape no-close-on-backdrop>
        <ui-header>
          <span slot="label">Persistent Drawer</span>
          <ui-button slot="trailing" variant="ghost" id="close-persistent"><ui-icon name="x"></ui-icon></ui-button>
        </ui-header>
        <ui-body>
          <p style="margin: 0; font-size: 0.875rem;">Neither Escape nor backdrop click will close this. Only the close button works.</p>
        </ui-body>
      </ui-drawer>
    </div>
  </main>

  <script>
import '../../scripts/copy-buttons';
function wire(openId, closeId, drawerId) {
        const open = document.getElementById(openId);
        const close = document.getElementById(closeId);
        const drawer = document.getElementById(drawerId);
        open?.addEventListener('ui-press', () => drawer?.showModal());
        close?.addEventListener('ui-press', () => drawer?.close());
      }
      wire('open-right', 'close-right', 'drawer-right');
      wire('open-left', 'close-left', 'drawer-left');
      wire('open-bottom', 'close-bottom', 'drawer-bottom');
      wire('open-top', 'close-top', 'drawer-top');
      wire('open-footer', 'close-footer', 'drawer-footer');
      document.getElementById('cancel-footer')?.addEventListener('ui-press', () => {
        document.getElementById('drawer-footer')?.close();
      });
      wire('open-no-escape', 'close-no-escape', 'drawer-no-escape');
      wire('open-no-backdrop', 'close-no-backdrop', 'drawer-no-backdrop');
      wire('open-persistent', 'close-persistent', 'drawer-persistent');
  </script>
</SidebarLayout>
