---
import SidebarLayout from '../../layouts/SidebarLayout.astro';

const codeExamples = {
  changeEvents: `&lt;ui-switch id="my-switch"&gt;Toggle me&lt;/ui-switch&gt;

&lt;script&gt;
  document.getElementById('my-switch')
    .addEventListener('ui-change', (e) =&gt; {
      console.log('checked:', e.detail.checked);
    });
&lt;/script&gt;`,
};
---
<SidebarLayout title="ui-switch">
  <main>
<h1>&lt;ui-switch&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Toggle switch with Pressable trait, form association, and sliding thumb animation.
    </p>

    <!-- ── Basic ── -->

    <h2>Basic</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-switch>Airplane mode</ui-switch>
        <ui-switch checked>Dark mode</ui-switch>
        <ui-switch>Notifications</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;ui-switch&gt;Airplane mode&lt;/ui-switch&gt;
&lt;ui-switch checked&gt;Dark mode&lt;/ui-switch&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">xs</span>
        <ui-switch size="xs" checked>Extra small</ui-switch>
      </div>
      <div class="layout-row">
        <span class="layout-label">sm</span>
        <ui-switch size="sm" checked>Small</ui-switch>
      </div>
      <div class="layout-row">
        <span class="layout-label">md</span>
        <ui-switch size="md" checked>Medium</ui-switch>
      </div>
      <div class="layout-row">
        <span class="layout-label">lg</span>
        <ui-switch size="lg" checked>Large</ui-switch>
      </div>
      <div class="layout-row">
        <span class="layout-label">xl</span>
        <ui-switch size="xl" checked>Extra large</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;ui-switch size="xs"&gt;Extra small&lt;/ui-switch&gt;
&lt;ui-switch size="sm"&gt;Small&lt;/ui-switch&gt;
&lt;ui-switch size="md"&gt;Medium&lt;/ui-switch&gt;
&lt;ui-switch size="lg"&gt;Large&lt;/ui-switch&gt;
&lt;ui-switch size="xl"&gt;Extra large&lt;/ui-switch&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Density ── -->

    <h2>Density</h2>
    <div class="layout-section">
      <h3>compact</h3>
      <div class="layout-col" density="compact">
        <ui-switch size="sm" checked>Small compact</ui-switch>
        <ui-switch checked>Medium compact</ui-switch>
        <ui-switch size="lg" checked>Large compact</ui-switch>
      </div>
      <h3>default</h3>
      <div class="layout-col">
        <ui-switch size="sm" checked>Small default</ui-switch>
        <ui-switch checked>Medium default</ui-switch>
        <ui-switch size="lg" checked>Large default</ui-switch>
      </div>
      <h3>loose</h3>
      <div class="layout-col" density="loose">
        <ui-switch size="sm" checked>Small loose</ui-switch>
        <ui-switch checked>Medium loose</ui-switch>
        <ui-switch size="lg" checked>Large loose</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;div density="compact"&gt;
  &lt;ui-switch checked&gt;Compact&lt;/ui-switch&gt;
&lt;/div&gt;
&lt;ui-switch checked&gt;Default&lt;/ui-switch&gt;
&lt;div density="loose"&gt;
  &lt;ui-switch checked&gt;Loose&lt;/ui-switch&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Intents ── -->

    <h2>Intents</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-switch intent="neutral" checked>Neutral</ui-switch>
        <ui-switch intent="accent" checked>Accent</ui-switch>
        <ui-switch intent="info" checked>Info</ui-switch>
        <ui-switch intent="success" checked>Success</ui-switch>
        <ui-switch intent="warning" checked>Warning</ui-switch>
        <ui-switch intent="danger" checked>Danger</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;ui-switch intent="accent" checked&gt;Accent&lt;/ui-switch&gt;
&lt;ui-switch intent="success" checked&gt;Success&lt;/ui-switch&gt;
&lt;ui-switch intent="danger" checked&gt;Danger&lt;/ui-switch&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Disabled ── -->

    <h2>Disabled</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-switch disabled>Off disabled</ui-switch>
        <ui-switch disabled checked>On disabled</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;ui-switch disabled&gt;Off disabled&lt;/ui-switch&gt;
&lt;ui-switch disabled checked&gt;On disabled&lt;/ui-switch&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Events ── -->

    <h2>Change Events</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-switch id="event-sw">Toggle me</ui-switch>
      </div>
      <div class="log" id="event-log"></div>
    <pre class="layout-code"><code set:html={codeExamples.changeEvents} /><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Form Association ── -->

    <h2>Form Association</h2>
    <div class="layout-section">
      <form id="demo-form">
        <div class="layout-col" style="margin-bottom: 1rem;">
          <ui-switch name="notifications" value="yes" checked>Enable notifications</ui-switch>
          <ui-switch name="analytics" value="yes">Send analytics</ui-switch>
          <ui-switch name="beta" value="yes">Beta features</ui-switch>
        </div>
        <div class="layout-row">
          <ui-button variant="primary" type="submit"><span slot="label">Submit</span></ui-button>
          <ui-button variant="secondary" type="reset"><span slot="label">Reset</span></ui-button>
        </div>
      </form>
      <div class="log" id="form-log"></div>
    <pre class="layout-code"><code>&lt;form&gt;
  &lt;ui-switch name="notifications" value="yes" checked&gt;Enable notifications&lt;/ui-switch&gt;
  &lt;ui-switch name="analytics" value="yes"&gt;Send analytics&lt;/ui-switch&gt;
  &lt;ui-button variant="primary" type="submit"&gt;
    &lt;span slot="label"&gt;Submit&lt;/span&gt;
  &lt;/ui-button&gt;
&lt;/form&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Cascading ── -->

    <h2>Cascading</h2>
    <div class="layout-section">
      <h3>Parent size="sm", intent="success"</h3>
      <div class="layout-col" size="sm" intent="success">
        <ui-switch checked>Inherited sm success</ui-switch>
        <ui-switch checked size="lg">Override lg</ui-switch>
        <ui-switch checked intent="danger">Override danger</ui-switch>
      </div>
      <pre class="layout-code"><code>&lt;div size="sm" intent="success"&gt;
  &lt;ui-switch checked&gt;Inherited sm success&lt;/ui-switch&gt;
  &lt;ui-switch checked size="lg"&gt;Override lg&lt;/ui-switch&gt;
  &lt;ui-switch checked intent="danger"&gt;Override danger&lt;/ui-switch&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Debug States (force-*) ── -->

    <h2>Debug States (<code>force-*</code>)</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Attribute-driven pseudo-state overrides for DevTools debugging and visual testing.
      </p>
      <div class="layout-row">
        <ui-switch force-hover>Force hover</ui-switch>
        <ui-switch force-hover checked>Force hover (checked)</ui-switch>
        <ui-switch force-focus-visible>Force focus-visible</ui-switch>
        <ui-switch force-focus-visible checked>Force focus-visible (checked)</ui-switch>
      </div>
    </div>
  </main>

  <script>
import '../../scripts/copy-buttons';
// Change event logging
      const eventSw = document.getElementById('event-sw');
      const eventLog = document.getElementById('event-log');
      let count = 0;

      eventSw.addEventListener('ui-change', (e) => {
        count++;
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = `#${count} ui-change — checked: ${e.detail.checked}, value: "${e.detail.value}"`;
        eventLog.prepend(entry);
      });

      // Form logging
      const form = document.getElementById('demo-form');
      const formLog = document.getElementById('form-log');

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const data = new FormData(form);
        const entries = [...data.entries()].map(([k, v]) => `${k}=${v}`).join(', ');
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = `submit — ${entries || '(empty)'}`;
        formLog.prepend(entry);
      });

      form.addEventListener('reset', () => {
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = 'reset';
        formLog.prepend(entry);
      });
  </script>
</SidebarLayout>
