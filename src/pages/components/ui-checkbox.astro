---
import SidebarLayout from '../../layouts/SidebarLayout.astro';

const codeExamples = {
  changeEvents: `&lt;ui-checkbox id="event-cb" intent="accent"&gt;Toggle me&lt;/ui-checkbox&gt;

&lt;script&gt;
  document.getElementById('event-cb')
    .addEventListener('ui-change', (e) =&gt; {
      console.log(e.detail.checked, e.detail.value);
    });
&lt;/script&gt;`,
};
---
<SidebarLayout title="ui-checkbox">
  <main>
<h1>&lt;ui-checkbox&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Custom checkbox with Pressable trait, form association, and indeterminate support.
    </p>

    <!-- ── Basic ── -->

    <h2>Basic</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-checkbox>Accept terms and conditions</ui-checkbox>
        <ui-checkbox checked>Email notifications</ui-checkbox>
        <ui-checkbox indeterminate>Select all</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox&gt;Accept terms and conditions&lt;/ui-checkbox&gt;
&lt;ui-checkbox checked&gt;Email notifications&lt;/ui-checkbox&gt;
&lt;ui-checkbox indeterminate&gt;Select all&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">xs</span>
        <ui-checkbox size="xs" checked>Extra small</ui-checkbox>
      </div>
      <div class="layout-row">
        <span class="layout-label">sm</span>
        <ui-checkbox size="sm" checked>Small</ui-checkbox>
      </div>
      <div class="layout-row">
        <span class="layout-label">md</span>
        <ui-checkbox size="md" checked>Medium</ui-checkbox>
      </div>
      <div class="layout-row">
        <span class="layout-label">lg</span>
        <ui-checkbox size="lg" checked>Large</ui-checkbox>
      </div>
      <div class="layout-row">
        <span class="layout-label">xl</span>
        <ui-checkbox size="xl" checked>Extra large</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox size="xs" checked&gt;Extra small&lt;/ui-checkbox&gt;
&lt;ui-checkbox size="sm" checked&gt;Small&lt;/ui-checkbox&gt;
&lt;ui-checkbox size="md" checked&gt;Medium&lt;/ui-checkbox&gt;
&lt;ui-checkbox size="lg" checked&gt;Large&lt;/ui-checkbox&gt;
&lt;ui-checkbox size="xl" checked&gt;Extra large&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Density ── -->

    <h2>Density</h2>
    <div class="layout-section">
      <h3>compact</h3>
      <div class="layout-col" density="compact">
        <ui-checkbox size="sm" checked>Small compact</ui-checkbox>
        <ui-checkbox checked>Medium compact</ui-checkbox>
        <ui-checkbox size="lg" checked>Large compact</ui-checkbox>
      </div>
      <h3>default</h3>
      <div class="layout-col">
        <ui-checkbox size="sm" checked>Small default</ui-checkbox>
        <ui-checkbox checked>Medium default</ui-checkbox>
        <ui-checkbox size="lg" checked>Large default</ui-checkbox>
      </div>
      <h3>loose</h3>
      <div class="layout-col" density="loose">
        <ui-checkbox size="sm" checked>Small loose</ui-checkbox>
        <ui-checkbox checked>Medium loose</ui-checkbox>
        <ui-checkbox size="lg" checked>Large loose</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;div density="compact"&gt;
  &lt;ui-checkbox checked&gt;Compact&lt;/ui-checkbox&gt;
&lt;/div&gt;
&lt;div density="loose"&gt;
  &lt;ui-checkbox checked&gt;Loose&lt;/ui-checkbox&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Radius ── -->

    <h2>Radius</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">default</span>
        <ui-checkbox checked>Checked</ui-checkbox>
        <ui-checkbox indeterminate>Indeterminate</ui-checkbox>
        <ui-checkbox>Unchecked</ui-checkbox>
      </div>
      <div class="layout-row">
        <span class="layout-label">sharp</span>
        <ui-checkbox radius="sharp" checked>Checked</ui-checkbox>
        <ui-checkbox radius="sharp" indeterminate>Indeterminate</ui-checkbox>
        <ui-checkbox radius="sharp">Unchecked</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox checked&gt;Default radius&lt;/ui-checkbox&gt;
&lt;ui-checkbox radius="sharp" checked&gt;Sharp radius&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Intents ── -->

    <h2>Intents</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-checkbox intent="neutral" checked>Neutral</ui-checkbox>
        <ui-checkbox intent="accent" checked>Accent</ui-checkbox>
        <ui-checkbox intent="info" checked>Info</ui-checkbox>
        <ui-checkbox intent="success" checked>Success</ui-checkbox>
        <ui-checkbox intent="warning" checked>Warning</ui-checkbox>
        <ui-checkbox intent="danger" checked>Danger</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox intent="accent" checked&gt;Accent&lt;/ui-checkbox&gt;
&lt;ui-checkbox intent="success" checked&gt;Success&lt;/ui-checkbox&gt;
&lt;ui-checkbox intent="warning" checked&gt;Warning&lt;/ui-checkbox&gt;
&lt;ui-checkbox intent="danger" checked&gt;Danger&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Disabled ── -->

    <h2>Disabled</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-checkbox disabled>Unchecked disabled</ui-checkbox>
        <ui-checkbox disabled checked>Checked disabled</ui-checkbox>
        <ui-checkbox disabled indeterminate>Indeterminate disabled</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox disabled&gt;Unchecked disabled&lt;/ui-checkbox&gt;
&lt;ui-checkbox disabled checked&gt;Checked disabled&lt;/ui-checkbox&gt;
&lt;ui-checkbox disabled indeterminate&gt;Indeterminate disabled&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── States ── -->

    <h2>States</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-checkbox>Unchecked</ui-checkbox>
        <ui-checkbox checked>Checked</ui-checkbox>
        <ui-checkbox indeterminate>Indeterminate</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;ui-checkbox&gt;Unchecked&lt;/ui-checkbox&gt;
&lt;ui-checkbox checked&gt;Checked&lt;/ui-checkbox&gt;
&lt;ui-checkbox indeterminate&gt;Indeterminate&lt;/ui-checkbox&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Events ── -->

    <h2>Change Events</h2>
    <div class="layout-section">
      <div class="layout-col">
        <ui-checkbox id="event-cb" intent="accent">Toggle me</ui-checkbox>
      </div>
      <div class="log" id="event-log"></div>
      <pre class="layout-code"><code set:html={codeExamples.changeEvents} /><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Form Association ── -->

    <h2>Form Association</h2>
    <div class="layout-section">
      <form id="demo-form">
        <div class="layout-col" style="margin-bottom: 1rem;">
          <ui-checkbox name="agree" value="yes" required>I agree to terms</ui-checkbox>
          <ui-checkbox name="newsletter" value="yes" checked>Subscribe to newsletter</ui-checkbox>
          <ui-checkbox name="beta" value="yes">Join beta program</ui-checkbox>
        </div>
        <div class="layout-row">
          <ui-button variant="primary" type="submit"><span slot="label">Submit</span></ui-button>
          <ui-button variant="secondary" type="reset"><span slot="label">Reset</span></ui-button>
        </div>
      </form>
      <div class="log" id="form-log"></div>
      <pre class="layout-code"><code>&lt;form&gt;
  &lt;ui-checkbox name="agree" value="yes" required&gt;I agree to terms&lt;/ui-checkbox&gt;
  &lt;ui-checkbox name="newsletter" value="yes" checked&gt;Subscribe to newsletter&lt;/ui-checkbox&gt;
  &lt;ui-button variant="primary" type="submit"&gt;
    &lt;span slot="label"&gt;Submit&lt;/span&gt;
  &lt;/ui-button&gt;
&lt;/form&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Cascading ── -->

    <h2>Cascading</h2>
    <div class="layout-section">
      <h3>Parent size="sm", intent="accent"</h3>
      <div class="layout-col" size="sm" intent="accent">
        <ui-checkbox checked>Inherited sm accent</ui-checkbox>
        <ui-checkbox checked size="lg">Override lg</ui-checkbox>
        <ui-checkbox checked intent="danger">Override danger</ui-checkbox>
      </div>
      <pre class="layout-code"><code>&lt;div size="sm" intent="accent"&gt;
  &lt;ui-checkbox checked&gt;Inherited sm accent&lt;/ui-checkbox&gt;
  &lt;ui-checkbox checked size="lg"&gt;Override lg&lt;/ui-checkbox&gt;
  &lt;ui-checkbox checked intent="danger"&gt;Override danger&lt;/ui-checkbox&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Debug States (force-*) ── -->

    <h2>Debug States (<code>force-*</code>)</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Attribute-driven pseudo-state overrides for DevTools debugging and visual testing.
      </p>
      <div class="layout-row">
        <ui-checkbox force-hover>Force hover</ui-checkbox>
        <ui-checkbox force-hover checked>Force hover (checked)</ui-checkbox>
        <ui-checkbox force-focus-visible>Force focus-visible</ui-checkbox>
        <ui-checkbox force-focus-visible checked>Force focus-visible (checked)</ui-checkbox>
      </div>
    </div>
  </main>

  <script>
import '../../scripts/copy-buttons';
// Change event logging
      const eventCb = document.getElementById('event-cb');
      const eventLog = document.getElementById('event-log');
      let count = 0;

      eventCb.addEventListener('ui-change', (e) => {
        count++;
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = `#${count} ui-change — checked: ${e.detail.checked}, value: "${e.detail.value}"`;
        eventLog.prepend(entry);
      });

      // Form logging
      const form = document.getElementById('demo-form');
      const formLog = document.getElementById('form-log');

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const data = new FormData(form);
        const entries = [...data.entries()].map(([k, v]) => `${k}=${v}`).join(', ');
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = `submit — ${entries || '(empty)'}`;
        formLog.prepend(entry);
      });

      form.addEventListener('reset', () => {
        const entry = document.createElement('div');
        entry.className = 'log-entry';
        entry.textContent = 'reset';
        formLog.prepend(entry);
      });
  </script>
</SidebarLayout>
