    <!-- ── Justify: spread ── -->

    <h2>Justify: spread</h2>
    <div class="layout-section" size="md" style="max-width: 20rem;">
      <ui-stack gap="2">
        <ui-button justify="spread">
          <ui-icon name="heart" slot="leading"></ui-icon>
          <span slot="label">Favorites</span>
          <ui-icon name="arrow-right" slot="trailing"></ui-icon>
        </ui-button>
        <ui-button variant="outline" justify="spread">
          <ui-icon name="pencil-simple" slot="leading"></ui-icon>
