---
import SidebarLayout from '../../layouts/SidebarLayout.astro';

const codeExamples = {
  pressEvents: `&lt;ui-button variant="primary" id="my-btn"&gt;
  &lt;span slot="label"&gt;Click me&lt;/span&gt;
&lt;/ui-button&gt;

&lt;script&gt;
  document.getElementById('my-btn')
    .addEventListener('ui-press', (e) =&gt; {
      console.log('pressed', e.detail.pointerType);
    });
&lt;/script&gt;`,
};
---
<SidebarLayout title="ui-button">
  <main>
<h1>&lt;ui-button&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Custom element with Pressable trait, form association, and signal-backed attributes.
    </p>

    <!-- ── Custom Element vs Native ── -->

    <h2>Custom Element vs Native Button</h2>
    <div class="layout-section">
      <h3>ui-button (Custom Element)</h3>
      <div class="layout-row">
        <ui-button variant="primary" size="sm"><span slot="label">Primary</span></ui-button>
        <ui-button variant="secondary" size="sm"><span slot="label">Secondary</span></ui-button>
        <ui-button variant="outline" size="sm"><span slot="label">Outline</span></ui-button>
        <ui-button variant="ghost" size="sm"><span slot="label">Ghost</span></ui-button>
        <ui-button variant="default" size="sm"><span slot="label">Default</span></ui-button>
        <ui-button variant="selected" size="sm"><span slot="label">Selected</span></ui-button>
      </div>

      <h3>Native button (same CSS)</h3>
      <div class="layout-row">
        <button variant="primary" size="sm"><span slot="label">Primary</span></button>
        <button variant="secondary" size="sm"><span slot="label">Secondary</span></button>
        <button variant="outline" size="sm"><span slot="label">Outline</span></button>
        <button variant="ghost" size="sm"><span slot="label">Ghost</span></button>
        <button variant="default" size="sm"><span slot="label">Default</span></button>
        <button variant="selected" size="sm"><span slot="label">Selected</span></button>
      </div>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">xs</span>
        <ui-button size="xs" variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button size="xs" variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button size="xs" variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">sm</span>
        <ui-button size="sm" variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button size="sm" variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button size="sm" variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">md</span>
        <ui-button size="md" variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button size="md" variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button size="md" variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">lg</span>
        <ui-button size="lg" variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button size="lg" variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button size="lg" variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">xl</span>
        <ui-button size="xl" variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button size="xl" variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button size="xl" variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button size="sm" variant="primary"&gt;
  &lt;span slot="label"&gt;Small&lt;/span&gt;
&lt;/ui-button&gt;

&lt;ui-button size="lg" variant="primary"&gt;
  &lt;span slot="label"&gt;Large&lt;/span&gt;
&lt;/ui-button&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Intents ── -->

    <h2>Intents</h2>
    <div class="layout-section" size="sm">
      <div class="layout-row">
        <ui-button variant="primary" intent="neutral"><span slot="label">Neutral</span></ui-button>
        <ui-button variant="primary" intent="accent"><span slot="label">Accent</span></ui-button>
        <ui-button variant="primary" intent="info"><span slot="label">Info</span></ui-button>
        <ui-button variant="primary" intent="success"><span slot="label">Success</span></ui-button>
        <ui-button variant="primary" intent="warning"><span slot="label">Warning</span></ui-button>
        <ui-button variant="primary" intent="danger"><span slot="label">Danger</span></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button variant="primary" intent="accent"&gt;
  &lt;span slot="label"&gt;Accent&lt;/span&gt;
&lt;/ui-button&gt;

&lt;ui-button variant="primary" intent="danger"&gt;
  &lt;span slot="label"&gt;Danger&lt;/span&gt;
&lt;/ui-button&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Disabled ── -->

    <h2>Disabled</h2>
    <div class="layout-section" size="sm">
      <div class="layout-row">
        <ui-button variant="primary" disabled><span slot="label">Primary</span></ui-button>
        <ui-button variant="secondary" disabled><span slot="label">Secondary</span></ui-button>
        <ui-button variant="outline" disabled><span slot="label">Outline</span></ui-button>
        <ui-button variant="ghost" disabled><span slot="label">Ghost</span></ui-button>
        <ui-button variant="default" disabled><span slot="label">Default</span></ui-button>
        <ui-button variant="selected" disabled><span slot="label">Selected</span></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button variant="primary" disabled&gt;
  &lt;span slot="label"&gt;Disabled&lt;/span&gt;
&lt;/ui-button&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Press Events ── -->

    <h2>Press Events</h2>
    <div class="layout-section" size="sm">
      <div class="layout-row">
        <ui-button variant="primary" id="press-btn"><span slot="label">Click or press Enter/Space</span></ui-button>
      </div>
      <div class="log" id="press-log"></div>
      <pre class="layout-code"><code set:html={codeExamples.pressEvents} /><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Form Association ── -->

    <h2>Form Association</h2>
    <div class="layout-section" size="sm">
      <form id="demo-form">
        <input type="text" name="demo" value="hello" style="margin-bottom: 0.5rem; padding: 0.25rem 0.5rem; border: 1px solid var(--neutral-border-muted); border-radius: 0.375rem; font-family: inherit;" />
        <div class="layout-row">
          <ui-button variant="primary" type="submit"><span slot="label">Submit</span></ui-button>
          <ui-button variant="secondary" type="reset"><span slot="label">Reset</span></ui-button>
          <ui-button variant="ghost"><span slot="label">Button (no form action)</span></ui-button>
        </div>
      </form>
      <div class="log" id="form-log"></div>
      <pre class="layout-code"><code>&lt;form&gt;
  &lt;ui-button variant="primary" type="submit"&gt;
    &lt;span slot="label"&gt;Submit&lt;/span&gt;
  &lt;/ui-button&gt;
  &lt;ui-button variant="secondary" type="reset"&gt;
    &lt;span slot="label"&gt;Reset&lt;/span&gt;
  &lt;/ui-button&gt;
&lt;/form&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Variants ── -->

    <h2>Variants</h2>
    <div class="layout-section" size="sm">
      <div class="layout-row">
        <span class="layout-label">primary</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
