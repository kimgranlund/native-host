        <ui-button variant="ghost" intent="neutral"><span slot="label">Neutral</span></ui-button>
        <ui-button variant="ghost" intent="accent"><span slot="label">Accent</span></ui-button>
        <ui-button variant="ghost" intent="info"><span slot="label">Info</span></ui-button>
