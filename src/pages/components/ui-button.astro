        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">outline</span>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">ghost</span>
        <ui-button variant="ghost"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">default</span>
        <ui-button variant="default"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row">
        <span class="layout-label">selected</span>
        <ui-button variant="selected"><span slot="label">Button</span></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button variant="primary"&gt;&lt;span slot="label"&gt;Primary&lt;/span&gt;&lt;/ui-button&gt;
&lt;ui-button variant="secondary"&gt;&lt;span slot="label"&gt;Secondary&lt;/span&gt;&lt;/ui-button&gt;
&lt;ui-button variant="outline"&gt;&lt;span slot="label"&gt;Outline&lt;/span&gt;&lt;/ui-button&gt;
&lt;ui-button variant="ghost"&gt;&lt;span slot="label"&gt;Ghost&lt;/span&gt;&lt;/ui-button&gt;
&lt;ui-button variant="default"&gt;&lt;span slot="label"&gt;Default&lt;/span&gt;&lt;/ui-button&gt;
&lt;ui-button variant="selected"&gt;&lt;span slot="label"&gt;Selected&lt;/span&gt;&lt;/ui-button&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Density ── -->

    <h2>Density</h2>
    <div class="layout-section">
      <h3>xs</h3>
      <div class="layout-row" size="xs" density="compact">
        <span class="layout-label">compact</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="xs" density="default">
        <span class="layout-label">default</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="xs" density="loose">
        <span class="layout-label">loose</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>

      <h3>sm</h3>
      <div class="layout-row" size="sm" density="compact">
        <span class="layout-label">compact</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="sm" density="default">
        <span class="layout-label">default</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="sm" density="loose">
        <span class="layout-label">loose</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>

      <h3>md</h3>
      <div class="layout-row" size="md" density="compact">
        <span class="layout-label">compact</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="md" density="default">
        <span class="layout-label">default</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="md" density="loose">
        <span class="layout-label">loose</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>

      <h3>lg</h3>
      <div class="layout-row" size="lg" density="compact">
        <span class="layout-label">compact</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="lg" density="default">
        <span class="layout-label">default</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
      <div class="layout-row" size="lg" density="loose">
        <span class="layout-label">loose</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>

      <h3>xl</h3>
      <div class="layout-row" size="xl" density="compact">
        <span class="layout-label">compact</span>
        <ui-button variant="primary"><span slot="label">Button</span></ui-button>
        <ui-button variant="secondary"><span slot="label">Button</span></ui-button>
        <ui-button variant="outline"><span slot="label">Button</span></ui-button>
      </div>
