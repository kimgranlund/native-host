---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-badge">
  <main>
<h1>&lt;ui-badge&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Small count or status indicator. Can be standalone, overlaid (floating), or a dot.
    </p>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">xs</span>
        <ui-badge size="xs">3</ui-badge>
        <ui-badge size="xs">42</ui-badge>
        <ui-badge size="xs">New</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">sm</span>
        <ui-badge size="sm">3</ui-badge>
        <ui-badge size="sm">42</ui-badge>
        <ui-badge size="sm">New</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">md</span>
        <ui-badge size="md">3</ui-badge>
        <ui-badge size="md">42</ui-badge>
        <ui-badge size="md">New</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">lg</span>
        <ui-badge size="lg">3</ui-badge>
        <ui-badge size="lg">42</ui-badge>
        <ui-badge size="lg">New</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">xl</span>
        <ui-badge size="xl">3</ui-badge>
        <ui-badge size="xl">42</ui-badge>
        <ui-badge size="xl">New</ui-badge>
      </div>
      <pre class="layout-code"><code>&lt;ui-badge size="sm"&gt;3&lt;/ui-badge&gt;
&lt;ui-badge size="md"&gt;42&lt;/ui-badge&gt;
&lt;ui-badge size="lg"&gt;New&lt;/ui-badge&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Intents ── -->

    <h2>Intents</h2>
    <div class="layout-section">
      <div class="layout-row">
        <ui-badge>Default</ui-badge>
        <ui-badge intent="accent">Accent</ui-badge>
        <ui-badge intent="info">Info</ui-badge>
        <ui-badge intent="success">Success</ui-badge>
        <ui-badge intent="warning">Warning</ui-badge>
        <ui-badge intent="danger">Danger</ui-badge>
      </div>
      <pre class="layout-code"><code>&lt;ui-badge&gt;Default&lt;/ui-badge&gt;
&lt;ui-badge intent="accent"&gt;Accent&lt;/ui-badge&gt;
&lt;ui-badge intent="success"&gt;Success&lt;/ui-badge&gt;
&lt;ui-badge intent="danger"&gt;Danger&lt;/ui-badge&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Variants ── -->

    <h2>Variants</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">solid</span>
        <ui-badge intent="accent">Accent</ui-badge>
        <ui-badge intent="info">Info</ui-badge>
        <ui-badge intent="success">Success</ui-badge>
        <ui-badge intent="warning">Warning</ui-badge>
        <ui-badge intent="danger">Danger</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">outline</span>
        <ui-badge variant="outline" intent="accent">Accent</ui-badge>
        <ui-badge variant="outline" intent="info">Info</ui-badge>
        <ui-badge variant="outline" intent="success">Success</ui-badge>
        <ui-badge variant="outline" intent="warning">Warning</ui-badge>
        <ui-badge variant="outline" intent="danger">Danger</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">ghost</span>
        <ui-badge variant="ghost" intent="accent">Accent</ui-badge>
        <ui-badge variant="ghost" intent="info">Info</ui-badge>
        <ui-badge variant="ghost" intent="success">Success</ui-badge>
        <ui-badge variant="ghost" intent="warning">Warning</ui-badge>
        <ui-badge variant="ghost" intent="danger">Danger</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">default</span>
        <ui-badge variant="default">Default</ui-badge>
        <ui-badge variant="default" intent="accent">Accent</ui-badge>
        <ui-badge variant="default" intent="info">Info</ui-badge>
        <ui-badge variant="default" intent="success">Success</ui-badge>
        <ui-badge variant="default" intent="warning">Warning</ui-badge>
        <ui-badge variant="default" intent="danger">Danger</ui-badge>
      </div>
      <pre class="layout-code"><code>&lt;ui-badge intent="accent"&gt;Solid (default)&lt;/ui-badge&gt;
&lt;ui-badge variant="outline" intent="accent"&gt;Outline&lt;/ui-badge&gt;
&lt;ui-badge variant="ghost" intent="accent"&gt;Ghost&lt;/ui-badge&gt;
&lt;ui-badge variant="default"&gt;Default&lt;/ui-badge&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes × Intents ── -->

    <h2>Sizes × Intents</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">xs</span>
        <ui-badge size="xs">7</ui-badge>
        <ui-badge size="xs" intent="accent">3</ui-badge>
        <ui-badge size="xs" intent="info">New</ui-badge>
        <ui-badge size="xs" intent="success">OK</ui-badge>
        <ui-badge size="xs" intent="warning">!</ui-badge>
        <ui-badge size="xs" intent="danger">5</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">sm</span>
        <ui-badge size="sm">7</ui-badge>
        <ui-badge size="sm" intent="accent">3</ui-badge>
        <ui-badge size="sm" intent="info">New</ui-badge>
        <ui-badge size="sm" intent="success">OK</ui-badge>
        <ui-badge size="sm" intent="warning">!</ui-badge>
        <ui-badge size="sm" intent="danger">5</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">md</span>
        <ui-badge size="md">7</ui-badge>
        <ui-badge size="md" intent="accent">3</ui-badge>
        <ui-badge size="md" intent="info">New</ui-badge>
        <ui-badge size="md" intent="success">OK</ui-badge>
        <ui-badge size="md" intent="warning">!</ui-badge>
        <ui-badge size="md" intent="danger">5</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">lg</span>
        <ui-badge size="lg">7</ui-badge>
        <ui-badge size="lg" intent="accent">3</ui-badge>
        <ui-badge size="lg" intent="info">New</ui-badge>
        <ui-badge size="lg" intent="success">OK</ui-badge>
        <ui-badge size="lg" intent="warning">!</ui-badge>
        <ui-badge size="lg" intent="danger">5</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">xl</span>
        <ui-badge size="xl">7</ui-badge>
        <ui-badge size="xl" intent="accent">3</ui-badge>
        <ui-badge size="xl" intent="info">New</ui-badge>
        <ui-badge size="xl" intent="success">OK</ui-badge>
        <ui-badge size="xl" intent="warning">!</ui-badge>
        <ui-badge size="xl" intent="danger">5</ui-badge>
      </div>
    </div>

    <!-- ── Radius ── -->

    <h2>Radius</h2>
    <div class="layout-section">
      <div class="layout-row">
        <span class="layout-label">sharp</span>
        <ui-badge radius="sharp" intent="accent">3</ui-badge>
        <ui-badge radius="sharp" intent="info">New</ui-badge>
        <ui-badge radius="sharp" intent="danger">5</ui-badge>
      </div>
      <div class="layout-row">
        <span class="layout-label">default (pill)</span>
        <ui-badge intent="accent">3</ui-badge>
        <ui-badge intent="info">New</ui-badge>
        <ui-badge intent="danger">5</ui-badge>
      </div>
    </div>

    <!-- ── Floating ── -->

    <h2>Floating (on icons)</h2>
    <div class="layout-section">
      <div class="layout-row">
        <div class="icon-badge-wrapper">
          <ui-button variant="ghost"><ui-icon name="bell"></ui-icon></ui-button>
          <ui-badge intent="danger" floating>5</ui-badge>
        </div>
        <div class="icon-badge-wrapper">
          <ui-button variant="ghost"><ui-icon name="envelope-simple"></ui-icon></ui-button>
          <ui-badge intent="accent" floating>12</ui-badge>
        </div>
        <div class="icon-badge-wrapper">
          <ui-button variant="ghost"><ui-icon name="chat-circle"></ui-icon></ui-button>
          <ui-badge intent="success" floating dot></ui-badge>
        </div>
      </div>
      <pre class="layout-code"><code>&lt;!-- Position: relative wrapper + floating badge --&gt;
&lt;div style="position: relative; display: inline-flex;"&gt;
  &lt;ui-button variant="ghost"&gt;
    &lt;ui-icon name="bell"&gt;&lt;/ui-icon&gt;
  &lt;/ui-button&gt;
  &lt;ui-badge intent="danger" floating&gt;5&lt;/ui-badge&gt;
&lt;/div&gt;

&lt;!-- Dot indicator (no content) --&gt;
&lt;div style="position: relative; display: inline-flex;"&gt;
  &lt;ui-button variant="ghost"&gt;
    &lt;ui-icon name="chat-circle"&gt;&lt;/ui-icon&gt;
  &lt;/ui-button&gt;
  &lt;ui-badge intent="success" floating dot&gt;&lt;/ui-badge&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Floating on Avatar ── -->

    <h2>Floating (on avatar)</h2>
    <div class="layout-section">
      <div class="layout-row">
        <div class="icon-badge-wrapper">
          <ui-avatar name="Kim Granlund"></ui-avatar>
          <ui-badge intent="success" floating dot></ui-badge>
        </div>
        <div class="icon-badge-wrapper">
          <ui-avatar name="Jane Doe"></ui-avatar>
          <ui-badge intent="danger" floating>3</ui-badge>
        </div>
        <div class="icon-badge-wrapper">
          <ui-avatar name="Alex Smith"></ui-avatar>
          <ui-badge intent="warning" floating>!</ui-badge>
        </div>
      </div>
    </div>

    <!-- ── Dot ── -->

    <h2>Dot indicator</h2>
    <div class="layout-section">
      <div class="layout-row">
        <ui-badge dot></ui-badge>
        <ui-badge intent="accent" dot></ui-badge>
        <ui-badge intent="info" dot></ui-badge>
        <ui-badge intent="success" dot></ui-badge>
        <ui-badge intent="warning" dot></ui-badge>
        <ui-badge intent="danger" dot></ui-badge>
      </div>
      <pre class="layout-code"><code>&lt;ui-badge dot&gt;&lt;/ui-badge&gt;
&lt;ui-badge intent="success" dot&gt;&lt;/ui-badge&gt;
&lt;ui-badge intent="danger" dot&gt;&lt;/ui-badge&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Max ── -->

    <h2>Max (truncation)</h2>
    <div class="layout-section">
      <div class="layout-row">
        <ui-badge max="99">150</ui-badge>
        <ui-badge max="9" intent="danger">12</ui-badge>
        <ui-badge max="99" intent="accent">5</ui-badge>
        <ui-badge max="999" intent="info">1234</ui-badge>
      </div>
      <pre class="layout-code"><code>&lt;!-- Clamps display to max value --&gt;
&lt;ui-badge max="99"&gt;150&lt;/ui-badge&gt;   &lt;!-- shows "99+" --&gt;
&lt;ui-badge max="9" intent="danger"&gt;12&lt;/ui-badge&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Inline with text ── -->

    <h2>Inline with text</h2>
    <div class="layout-section">
      <p style="font-size: 0.875rem; line-height: 1.5;">
        Messages <ui-badge intent="accent">3</ui-badge> &nbsp;
        Notifications <ui-badge intent="danger">12</ui-badge> &nbsp;
        Updates <ui-badge intent="info">New</ui-badge> &nbsp;
        Status <ui-badge intent="success">OK</ui-badge>
      </p>
    </div>

    <!-- ── Inline with buttons ── -->

    <h2>Inline with buttons</h2>
    <div class="layout-section">
      <div class="layout-row">
        <ui-button size="sm">Inbox <ui-badge intent="accent" size="xs">3</ui-badge></ui-button>
        <ui-button size="md">Alerts <ui-badge intent="danger" size="xs">7</ui-badge></ui-button>
        <ui-button size="lg" intent="accent">Tasks <ui-badge variant="outline" size="sm">12</ui-badge></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button&gt;
  Inbox &lt;ui-badge intent="accent" size="xs"&gt;3&lt;/ui-badge&gt;
&lt;/ui-button&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>
  </main>

  <script>
// ── Copy buttons ──

      for (const btn of document.querySelectorAll('.copy-btn')) {
        btn.addEventListener('click', async () => {
          const code = btn.closest('.layout-code')?.querySelector('code');
          if (!code) return;
          await navigator.clipboard.writeText(code.textContent);
          const icon = btn.querySelector('ui-icon');
          if (icon) {
            icon.setAttribute('name', 'check');
            setTimeout(() => { icon.setAttribute('name', 'copy'); }, 1500);
          }
        });
      }
  </script>
  <style is:global>
    .icon-badge-wrapper {
      position: relative;
      display: inline-flex;
    }

    /* ── Code Blocks ── */
</style>

</SidebarLayout>
