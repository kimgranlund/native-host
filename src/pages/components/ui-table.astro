---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-table">
  <main>
<h1>&lt;ui-table&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Data table with sortable columns and selectable rows. Uses CSS grid with <code>subgrid</code> for column alignment.
    </p>

    <!-- ── Basic Table ── -->

    <h2>Basic Table</h2>
    <div class="layout-section">
      <ui-table style="grid-template-columns: 1fr 1fr 1fr;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Name</ui-table-header>
            <ui-table-header>Role</ui-table-header>
            <ui-table-header>Status</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell>Alice Johnson</ui-table-cell>
            <ui-table-cell>Engineer</ui-table-cell>
            <ui-table-cell>Active</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Bob Smith</ui-table-cell>
            <ui-table-cell>Designer</ui-table-cell>
            <ui-table-cell>Active</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Carol White</ui-table-cell>
            <ui-table-cell>Manager</ui-table-cell>
            <ui-table-cell>Away</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table style="grid-template-columns: 1fr 1fr 1fr;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header&gt;Name&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Role&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Status&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-cell&gt;Alice&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;Engineer&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;Active&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sortable Columns ── -->

    <h2>Sortable Columns</h2>
    <div class="layout-section">
      <ui-table id="sortable-table" style="grid-template-columns: 2fr 1fr 80px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header sortable column="name">Name</ui-table-header>
            <ui-table-header sortable column="language">Language</ui-table-header>
            <ui-table-header sortable column="stars">Stars</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body id="sortable-body">
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table style="grid-template-columns: 2fr 1fr 80px;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header sortable column="name"&gt;Name&lt;/ui-table-header&gt;
      &lt;ui-table-header sortable column="lang"&gt;Language&lt;/ui-table-header&gt;
      &lt;ui-table-header sortable column="stars"&gt;Stars&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;...&lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Selectable Rows ── -->

    <h2>Selectable Rows</h2>
    <div class="layout-section">
      <ui-table selectable style="grid-template-columns: 1fr 1fr 100px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Product</ui-table-header>
            <ui-table-header>Category</ui-table-header>
            <ui-table-header>Price</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row value="keyboard">
            <ui-table-cell>Mechanical Keyboard</ui-table-cell>
            <ui-table-cell>Peripherals</ui-table-cell>
            <ui-table-cell>$149</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="monitor">
            <ui-table-cell>4K Monitor</ui-table-cell>
            <ui-table-cell>Displays</ui-table-cell>
            <ui-table-cell>$499</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="mouse">
            <ui-table-cell>Wireless Mouse</ui-table-cell>
            <ui-table-cell>Peripherals</ui-table-cell>
            <ui-table-cell>$79</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="headphones">
            <ui-table-cell>Studio Headphones</ui-table-cell>
            <ui-table-cell>Audio</ui-table-cell>
            <ui-table-cell>$299</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
      <div class="log" id="selection-log"></div>
    <pre class="layout-code"><code>&lt;ui-table selectable style="grid-template-columns: 1fr 1fr 100px;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header&gt;Product&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Category&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Price&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;
    &lt;ui-table-row value="keyboard"&gt;
      &lt;ui-table-cell&gt;Keyboard&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;Peripherals&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;$149&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <h3>sm</h3>
      <ui-table size="sm" style="grid-template-columns: 1fr 1fr 1fr;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Key</ui-table-header>
            <ui-table-header>Value</ui-table-header>
            <ui-table-header>Type</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell>NODE_ENV</ui-table-cell>
            <ui-table-cell>production</ui-table-cell>
            <ui-table-cell>string</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>PORT</ui-table-cell>
            <ui-table-cell>3000</ui-table-cell>
            <ui-table-cell>number</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>

      <h3>md (default)</h3>
      <ui-table style="grid-template-columns: 1fr 1fr 1fr;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Key</ui-table-header>
            <ui-table-header>Value</ui-table-header>
            <ui-table-header>Type</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell>NODE_ENV</ui-table-cell>
            <ui-table-cell>production</ui-table-cell>
            <ui-table-cell>string</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>PORT</ui-table-cell>
            <ui-table-cell>3000</ui-table-cell>
            <ui-table-cell>number</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>

      <h3>lg</h3>
      <ui-table size="lg" style="grid-template-columns: 1fr 1fr 1fr;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Key</ui-table-header>
            <ui-table-header>Value</ui-table-header>
            <ui-table-header>Type</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell>NODE_ENV</ui-table-cell>
            <ui-table-cell>production</ui-table-cell>
            <ui-table-cell>string</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>PORT</ui-table-cell>
            <ui-table-cell>3000</ui-table-cell>
            <ui-table-cell>number</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table size="sm" style="grid-template-columns: 1fr 1fr 1fr;"&gt;...&lt;/ui-table&gt;
&lt;ui-table style="grid-template-columns: 1fr 1fr 1fr;"&gt;...&lt;/ui-table&gt;
&lt;ui-table size="lg" style="grid-template-columns: 1fr 1fr 1fr;"&gt;...&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Plain Variant ── -->

    <h2>Plain Variant</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Editorial / documentation tables that sit inline with prose. No outer border, no radius, no header fill, no row hover.
      </p>
      <ui-table variant="plain" size="sm" style="grid-template-columns: auto 1fr 1fr;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Token</ui-table-header>
            <ui-table-header>Resolves</ui-table-header>
            <ui-table-header>Usage</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell><code>--_min-height</code></ui-table-cell>
            <ui-table-cell>Size scale vertical sizing</ui-table-cell>
            <ui-table-cell>All interactive components</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell><code>--_font-size</code></ui-table-cell>
            <ui-table-cell>Size scale typography</ui-table-cell>
            <ui-table-cell>Text content, labels</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell><code>--_space</code></ui-table-cell>
            <ui-table-cell>Size scale spacing unit</ui-table-cell>
            <ui-table-cell>Padding, gaps, margins</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell><code>--_radius</code></ui-table-cell>
            <ui-table-cell>Radius attribute override</ui-table-cell>
            <ui-table-cell>Border radius on containers</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table variant="plain" size="sm" style="grid-template-columns: auto 1fr 1fr;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header&gt;Token&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Resolves&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Usage&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;...&lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Colspan Rows ── -->

    <h2>Colspan Rows</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Full-width category headers that opt out of subgrid. Hidden automatically when the table is sorted.
      </p>
      <ui-table id="colspan-table" style="grid-template-columns: 2fr 1fr 80px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header sortable column="name">Name</ui-table-header>
            <ui-table-header sortable column="role">Role</ui-table-header>
            <ui-table-header sortable column="salary">Salary</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row colspan>
            <ui-table-cell>Engineering</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Alice Johnson</ui-table-cell>
            <ui-table-cell>Senior Engineer</ui-table-cell>
            <ui-table-cell>$180k</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Bob Smith</ui-table-cell>
            <ui-table-cell>Staff Engineer</ui-table-cell>
            <ui-table-cell>$210k</ui-table-cell>
          </ui-table-row>
          <ui-table-row colspan>
            <ui-table-cell>Design</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Carol White</ui-table-cell>
            <ui-table-cell>Lead Designer</ui-table-cell>
            <ui-table-cell>$165k</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Dan Lee</ui-table-cell>
            <ui-table-cell>UX Researcher</ui-table-cell>
            <ui-table-cell>$140k</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table style="grid-template-columns: 2fr 1fr 80px;"&gt;
  &lt;ui-table-body&gt;
    &lt;ui-table-row colspan&gt;
      &lt;ui-table-cell&gt;Engineering&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-cell&gt;Alice&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;Engineer&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;$180k&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sticky Header ── -->

    <h2>Sticky Header</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Header row stays fixed when scrolling vertically. Requires constrained height on the table.
      </p>
      <ui-table sticky-header style="grid-template-columns: 1fr 1fr 100px; max-height: 200px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Name</ui-table-header>
            <ui-table-header>Department</ui-table-header>
            <ui-table-header>Status</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body id="sticky-body">
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table sticky-header style="grid-template-columns: 1fr 1fr 100px; max-height: 200px;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header&gt;Name&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Department&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Status&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;...&lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sticky Column ── -->

    <h2>Sticky Column</h2>
    <div class="layout-section" style="max-width: 400px;">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        First column stays fixed when scrolling horizontally. Requires constrained width.
      </p>
      <ui-table sticky-column style="grid-template-columns: 120px 150px 150px 150px 150px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Name</ui-table-header>
            <ui-table-header>Q1</ui-table-header>
            <ui-table-header>Q2</ui-table-header>
            <ui-table-header>Q3</ui-table-header>
            <ui-table-header>Q4</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row>
            <ui-table-cell>Alice</ui-table-cell>
            <ui-table-cell>$42,500</ui-table-cell>
            <ui-table-cell>$48,200</ui-table-cell>
            <ui-table-cell>$51,800</ui-table-cell>
            <ui-table-cell>$55,100</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Bob</ui-table-cell>
            <ui-table-cell>$38,100</ui-table-cell>
            <ui-table-cell>$41,300</ui-table-cell>
            <ui-table-cell>$43,700</ui-table-cell>
            <ui-table-cell>$46,200</ui-table-cell>
          </ui-table-row>
          <ui-table-row>
            <ui-table-cell>Carol</ui-table-cell>
            <ui-table-cell>$55,000</ui-table-cell>
            <ui-table-cell>$58,400</ui-table-cell>
            <ui-table-cell>$62,100</ui-table-cell>
            <ui-table-cell>$67,800</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table sticky-column style="grid-template-columns: 120px 150px 150px 150px;"&gt;
  &lt;ui-table-head&gt;
    &lt;ui-table-row&gt;
      &lt;ui-table-header&gt;Name&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Q1&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Q2&lt;/ui-table-header&gt;
      &lt;ui-table-header&gt;Q3&lt;/ui-table-header&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-head&gt;
  &lt;ui-table-body&gt;...&lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sticky Colspan Rows ── -->

    <h2>Sticky Colspan Rows</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Section headers stick below the table header as you scroll, like iOS section headers.
        Each section header pushes the previous one up.
      </p>
      <ui-table sticky-header style="grid-template-columns: 2fr 1fr 80px; max-height: 280px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Name</ui-table-header>
            <ui-table-header>Role</ui-table-header>
            <ui-table-header>Salary</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body id="sticky-colspan-body">
        </ui-table-body>
      </ui-table>
    <pre class="layout-code"><code>&lt;ui-table sticky-header style="grid-template-columns: 2fr 1fr 80px; max-height: 280px;"&gt;
  &lt;ui-table-body&gt;
    &lt;ui-table-row colspan sticky&gt;
      &lt;ui-table-cell&gt;Section Header&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
    &lt;ui-table-row&gt;...&lt;/ui-table-row&gt;
  &lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Reorderable Rows ── -->

    <h2>Reorderable Rows</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin: 0 0 1rem;">
        Drag rows to reorder. DOM is auto-reordered unless the <code>ui-table-reorder</code> event is cancelled.
      </p>
      <ui-table reorderable style="grid-template-columns: 1fr 1fr 100px;">
        <ui-table-head>
          <ui-table-row>
            <ui-table-header>Task</ui-table-header>
            <ui-table-header>Priority</ui-table-header>
            <ui-table-header>Status</ui-table-header>
          </ui-table-row>
        </ui-table-head>
        <ui-table-body>
          <ui-table-row value="task-1">
            <ui-table-cell>Implement auth</ui-table-cell>
            <ui-table-cell>High</ui-table-cell>
            <ui-table-cell>In Progress</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="task-2">
            <ui-table-cell>Design system tokens</ui-table-cell>
            <ui-table-cell>Medium</ui-table-cell>
            <ui-table-cell>Done</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="task-3">
            <ui-table-cell>Write tests</ui-table-cell>
            <ui-table-cell>High</ui-table-cell>
            <ui-table-cell>Todo</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="task-4">
            <ui-table-cell>Deploy to staging</ui-table-cell>
            <ui-table-cell>Low</ui-table-cell>
            <ui-table-cell>Todo</ui-table-cell>
          </ui-table-row>
          <ui-table-row value="task-5">
            <ui-table-cell>Code review</ui-table-cell>
            <ui-table-cell>Medium</ui-table-cell>
            <ui-table-cell>In Progress</ui-table-cell>
          </ui-table-row>
        </ui-table-body>
      </ui-table>
      <div class="log" id="reorder-log"></div>
    <pre class="layout-code"><code>&lt;ui-table reorderable style="grid-template-columns: 1fr 1fr 100px;"&gt;
  &lt;ui-table-body&gt;
    &lt;ui-table-row value="task-1"&gt;
      &lt;ui-table-cell&gt;Implement auth&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;High&lt;/ui-table-cell&gt;
      &lt;ui-table-cell&gt;In Progress&lt;/ui-table-cell&gt;
    &lt;/ui-table-row&gt;
  &lt;/ui-table-body&gt;
&lt;/ui-table&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
