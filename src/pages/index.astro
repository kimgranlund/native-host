---
import SidebarLayout from '../layouts/SidebarLayout.astro';
import sitemap from '../data/sitemap.json';

// Count items per group
const groups = new Map<string, typeof sitemap>();
for (const entry of sitemap) {
  if (!groups.has(entry.group)) groups.set(entry.group, []);
  groups.get(entry.group)!.push(entry);
}

const groupMeta: Record<string, { icon: string; description: string }> = {
  Components: {
    icon: 'cube',
    description: 'Interactive UI elements — buttons, inputs, dialogs, tables, and more.',
  },
  Containers: {
    icon: 'package',
    description: 'Layout primitives — stacks, grids, cards, panels, and structural wrappers.',
  },
  Traits: {
    icon: 'lightning',
    description: 'Composable behavior controllers — drag, copy, validate, sort, and more.',
  },
  Blocks: {
    icon: 'squares-four',
    description: 'Full-page patterns — auth flows, dashboards, forms, and navigation layouts.',
  },
  Core: {
    icon: 'cpu',
    description: 'Reactivity primitives — signals, computed values, and the context API.',
  },
  Other: {
    icon: 'compass',
    description: 'Design tokens, icons, the Kernel runtime, and experimental features.',
  },
};
---
<SidebarLayout title="Overview">
  <main>
    <div class="hero">
      <h1>
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="3" y="3" width="18" height="18" rx="4" stroke="currentColor" stroke-width="2"/>
          <path d="M8 16V8l8 8V8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        native-ui
      </h1>
      <p class="hero-tagline">Zero-dependency web component library with an OKLCH design system, signal-based reactivity, and composable trait controllers.</p>
      <div class="hero-actions">
        <ui-button variant="solid" size="md" onclick="location.href='/components/ui-button'">
          <ui-icon name="cube" slot="leading"></ui-icon>
          Browse Components
        </ui-button>
        <ui-button variant="ghost" size="md" class="install-btn" id="install-btn">
          <ui-icon name="terminal" slot="leading"></ui-icon>
          npm i @nonoun/native-ui
          <ui-icon name="copy" slot="trailing"></ui-icon>
        </ui-button>
      </div>
    </div>

    <div class="group-grid">
      {[...groups.entries()].map(([name, entries]) => {
        const meta = groupMeta[name] || { icon: 'compass', description: '' };
        const firstPath = entries[0]?.path;
        return (
          <a class="group-card" href={firstPath}>
            <div class="group-card-header">
              <ui-icon name={meta.icon}></ui-icon>
              <span class="group-card-title">{name}</span>
              <span class="group-card-count">{entries.length}</span>
            </div>
            <p class="group-card-desc">{meta.description}</p>
            <ul class="group-card-list">
              {entries.slice(0, 5).map(e => (
                <li>{e.title}</li>
              ))}
              {entries.length > 5 && <li class="group-card-more">+{entries.length - 5} more</li>}
            </ul>
          </a>
        );
      })}
    </div>

    <div class="features">
      <div class="feature">
        <ui-icon name="drop" size="lg"></ui-icon>
        <h3>Light DOM Only</h3>
        <p>No shadow DOM. Style everything with plain CSS. Full access to component internals.</p>
      </div>
      <div class="feature">
        <ui-icon name="palette" size="lg"></ui-icon>
        <h3>OKLCH Color System</h3>
        <p>Perceptually uniform colors. Automatic dark mode. Accessible contrast ratios by default.</p>
      </div>
      <div class="feature">
        <ui-icon name="lightning" size="lg"></ui-icon>
        <h3>Trait Controllers</h3>
        <p>Composable behaviors — add drag, copy, validate, or sort to any element with a single attribute.</p>
      </div>
      <div class="feature">
        <ui-icon name="graph" size="lg"></ui-icon>
        <h3>Signal Reactivity</h3>
        <p>Built-in signals and computed values. No framework dependency. Fine-grained DOM updates.</p>
      </div>
    </div>
  </main>

  <script>
    const btn = document.getElementById('install-btn');
    btn?.addEventListener('click', async () => {
      await navigator.clipboard.writeText('npm i @nonoun/native-ui');
      const icon = btn.querySelector('[slot="trailing"]');
      if (icon) {
        icon.setAttribute('name', 'check');
        setTimeout(() => icon.setAttribute('name', 'copy'), 1500);
      }
    });
  </script>

  <style is:global>
    /* ── Hero ── */

    .hero {
      text-align: center;
      padding: 3rem 1rem 2rem;
    }

    .hero h1 {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      font-size: 1.5rem;
      font-weight: 800;
      margin-bottom: 0.75rem;
    }

    .hero-tagline {
      color: var(--neutral-ink-muted);
      font-size: 0.9375rem;
      max-width: 520px;
      margin: 0 auto 1.5rem;
      line-height: 1.5;
    }

    .hero-actions {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.75rem;
      flex-wrap: wrap;
    }

    .install-btn {
      font-family: ui-monospace, monospace;
      cursor: pointer;
    }

    /* ── Group Grid ── */

    .group-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
      gap: 0.75rem;
      padding: 0 1rem 2rem;
    }

    .group-card {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem;
      background: var(--neutral-panel);
      border: 1px solid var(--neutral-border-muted);
      border-radius: 0.5rem;
      text-decoration: none;
      color: inherit;
      transition: border-color 150ms ease, box-shadow 150ms ease;
    }

    .group-card:hover {
      border-color: var(--neutral-border);
      box-shadow: 0 2px 8px oklch(0 0 0 / 0.06);
    }

    .group-card-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .group-card-title {
      font-weight: 700;
      font-size: 0.9375rem;
    }

    .group-card-count {
      margin-left: auto;
      font-size: 0.6875rem;
      font-weight: 600;
      color: var(--neutral-ink-muted);
      background: var(--neutral-body);
      padding: 0.0625rem 0.375rem;
      border-radius: 9999px;
    }

    .group-card-desc {
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
      line-height: 1.4;
    }

    .group-card-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem 0.5rem;
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 0.6875rem;
      color: var(--neutral-ink-muted);
    }

    .group-card-more {
      font-style: italic;
    }

    /* ── Features ── */

    .features {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
      padding: 1rem 1rem 3rem;
      border-top: 1px solid var(--neutral-border-muted);
    }

    .feature {
      display: flex;
      flex-direction: column;
      gap: 0.375rem;
    }

    .feature ui-icon {
      color: var(--accent-ink);
      margin-bottom: 0.25rem;
    }

    .feature h3 {
      font-size: 0.8125rem;
      font-weight: 700;
      margin: 0;
    }

    .feature p {
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
      line-height: 1.4;
      margin: 0;
    }
  </style>
</SidebarLayout>
