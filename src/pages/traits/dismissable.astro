---
import SidebarLayout from '../../layouts/SidebarLayout.astro';

const codeExamples = {
  clickOutsideToDismiss: `import { DismissController } from '@nonoun/native-ui';

const panel = document.getElementById('panel');
const dismiss = new DismissController(panel);

function showPanel() {
  panel.removeAttribute('hidden');
  dismiss.enable();
}

function hidePanel() {
  dismiss.disable();
  panel.setAttribute('hidden', '');
}

panel.addEventListener('ui-dismiss', () =&gt; hidePanel());`,
};
---
<SidebarLayout title="Dismissable">
  <main>
<h1>Dismissable</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Composable trait that manages a global layer stack. When enabled, clicking outside the element or pressing Escape dispatches a <code>ui-dismiss</code> event. Only the topmost layer in the stack receives dismiss events.
    </p>

    <!-- ── Click Outside to Dismiss ── -->

    <h2>Click Outside to Dismiss</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin-bottom: 0.75rem;">
        Uses <code>DismissController</code> directly on a plain element. Call <code>enable()</code> to join the dismiss stack, <code>disable()</code> to leave.
      </p>
      <ui-button id="open-btn">Open Panel</ui-button>
      <div class="dismiss-panel" id="panel" hidden>
        This panel is dismissable. Click anywhere outside it or press <strong>Escape</strong> to close.
        <br><br>
        Clicking inside the panel will not dismiss it.
      </div>
      <div id="log" class="output"></div>
      <pre class="layout-code"><code set:html={codeExamples.clickOutsideToDismiss} /><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Nested Layers ── -->

    <h2>Nested Layers (Stack)</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin-bottom: 0.75rem;">
        Open both panels. Only the topmost one receives dismiss events. After the top panel is dismissed, the bottom panel becomes the new top.
      </p>
      <div style="display: flex; gap: 0.5rem;">
        <ui-button id="open-a">Open Panel A</ui-button>
        <ui-button id="open-b">Open Panel B</ui-button>
      </div>
      <div class="dismiss-panel" id="panel-a" hidden>
        <strong>Panel A</strong> — I'm the first layer.
      </div>
      <div class="dismiss-panel" id="panel-b" hidden style="background: var(--info-surface); color: var(--info-surface-ink);">
        <strong>Panel B</strong> — I'm on top of Panel A.
      </div>
      <pre class="layout-code"><code>&lt;!-- Each panel has its own DismissController --&gt;
const dismissA = new DismissController(panelA);
const dismissB = new DismissController(panelB);

// Open Panel A — joins dismiss stack
panelA.removeAttribute('hidden');
dismissA.enable();

// Open Panel B — becomes top of stack
panelB.removeAttribute('hidden');
dismissB.enable();

// Escape/click-outside dismisses B first, then A</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Built-in: ui-dialog ── -->

    <h2>Built-in: ui-dialog</h2>
    <div class="layout-section">
      <p style="font-size: 0.75rem; color: var(--neutral-ink-muted); margin-bottom: 0.75rem;">
        <code>ui-dialog</code> uses Dismissable internally. Escape and backdrop click close the dialog automatically.
      </p>
      <ui-button id="open-dialog">Open Dialog</ui-button>
      <ui-dialog id="demo-dialog">
        <ui-card style="width: 20rem; padding: 1.5rem;">
          <p style="margin: 0 0 1rem;">This dialog uses Dismissable internally. Press Escape or click the backdrop to close.</p>
          <ui-button id="close-dialog" intent="accent">Close</ui-button>
        </ui-card>
      </ui-dialog>
      <pre class="layout-code"><code>&lt;ui-button id="open"&gt;Open Dialog&lt;/ui-button&gt;
&lt;ui-dialog id="dialog"&gt;
  &lt;ui-card&gt;
    &lt;p&gt;Dialog content&lt;/p&gt;
    &lt;ui-button id="close"&gt;Close&lt;/ui-button&gt;
  &lt;/ui-card&gt;
&lt;/ui-dialog&gt;

&lt;script&gt;
  open.addEventListener('ui-press', () =&gt; dialog.showModal());
  close.addEventListener('ui-press', () =&gt; dialog.close());
&lt;/script&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── API Reference ── -->

    <h2>API</h2>

    <div class="api-section">
      <h3>Methods</h3>
      <table class="api-table">
        <thead><tr><th>Method</th><th>Description</th></tr></thead>
        <tbody>
          <tr>
            <td><code>enable()</code></td>
            <td>Pushes the element onto the global dismiss stack. Click-outside and Escape will fire <code>ui-dismiss</code> on this element.</td>
          </tr>
          <tr>
            <td><code>disable()</code></td>
            <td>Removes the element from the dismiss stack. No more dismiss events.</td>
          </tr>
          <tr>
            <td><code>destroy()</code></td>
            <td>Removes from stack and cleans up. Call in <code>teardown()</code>.</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="api-section">
      <h3>Events</h3>
      <table class="api-table">
        <thead><tr><th>Event</th><th>Detail</th><th>Description</th></tr></thead>
        <tbody>
          <tr>
            <td><code>ui-dismiss</code></td>
            <td>—</td>
            <td>Fired when click-outside or Escape occurs while this element is the topmost layer. Consumer handles hiding.</td>
          </tr>
        </tbody>
      </table>
    </div>
  </main>

  <script>
import '../../scripts/copy-buttons';
import { logAppend as appendLog } from '../../scripts/event-log';

      // ── Click Outside Demo ──

      const panel = document.getElementById('panel');
      const dismiss = new DismissController(panel);
      const logEl = document.getElementById('log');
      let count = 0;

      function showPanel() {
        panel.removeAttribute('hidden');
        dismiss.enable();
        count++;
        appendLog(logEl, `#${count} Panel opened`);
      }

      function hidePanel() {
        dismiss.disable();
        panel.setAttribute('hidden', '');
      }

      document.getElementById('open-btn').addEventListener('ui-press', () => showPanel());
      panel.addEventListener('ui-dismiss', () => {
        count++;
        appendLog(logEl, `#${count} Panel dismissed`);
        hidePanel();
      });

      // ── Nested Layers Demo ──

      const panelA = document.getElementById('panel-a');
      const panelB = document.getElementById('panel-b');
      const dismissA = new DismissController(panelA);
      const dismissB = new DismissController(panelB);

      function showPanelEl(el, ctrl) {
        el.removeAttribute('hidden');
        ctrl.enable();
      }

      function hidePanelEl(el, ctrl) {
        ctrl.disable();
        el.setAttribute('hidden', '');
      }

      document.getElementById('open-a').addEventListener('ui-press', () => showPanelEl(panelA, dismissA));
      document.getElementById('open-b').addEventListener('ui-press', () => showPanelEl(panelB, dismissB));
      panelA.addEventListener('ui-dismiss', () => hidePanelEl(panelA, dismissA));
      panelB.addEventListener('ui-dismiss', () => hidePanelEl(panelB, dismissB));

      // ── Dialog Demo ──

      const dialog = document.getElementById('demo-dialog');
      document.getElementById('open-dialog').addEventListener('ui-press', () => dialog.showModal());
      document.getElementById('close-dialog').addEventListener('ui-press', () => dialog.close());
  </script>
  <style is:global>
    .dismiss-panel {
      display: block;
      padding: 1rem;
      background: var(--accent-surface);
      color: var(--accent-surface-ink);
      border-radius: 0.5rem;
      margin-top: 0.75rem;
      font-size: 0.875rem;
    }

    .dismiss-panel[hidden] {
      display: none;
    }

    .output {
      font-family: monospace;
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
      max-height: 6rem;
      overflow-y: auto;
      margin-top: 0.75rem;
      padding: 0.5rem;
      background: var(--neutral-panel);
      border-radius: 0.25rem;
    }

    /* ── Code Blocks ── */

    /* ── API Reference ── */

    .api-section {
      margin-bottom: 1.5rem;
    }

    .api-table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.8125rem;
    }

    .api-table th {
      text-align: left;
      font-weight: 600;
      padding: 0.5rem 0.75rem;
      border-bottom: 2px solid var(--neutral-border-muted);
      color: var(--neutral-ink-strong);
    }

    .api-table td {
      padding: 0.5rem 0.75rem;
      border-bottom: 1px solid var(--neutral-border-muted);
      vertical-align: top;
    }

    .api-table code {
      font-family: ui-monospace, monospace;
      font-size: 0.75rem;
      background: var(--neutral-panel);
      padding: 0.0625rem 0.3125rem;
      border-radius: 0.1875rem;
    }

    .api-table td:first-child code {
      white-space: nowrap;
    }
</style>

</SidebarLayout>
