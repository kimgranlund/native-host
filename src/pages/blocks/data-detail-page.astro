---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="Data Detail Page">
  <main>
<ui-stack gap="6">

    <!-- ── Breadcrumb ── -->
    <ui-breadcrumb>
      <ui-breadcrumb-item href="/">Dashboard</ui-breadcrumb-item>
      <ui-breadcrumb-item href="/users">Users</ui-breadcrumb-item>
      <ui-breadcrumb-item current>Kim Granlund</ui-breadcrumb-item>
    </ui-breadcrumb>

    <!-- ── Profile Header ── -->
    <ui-card>
      <div class="profile-header">
        <ui-avatar name="Kim Granlund" size="xl" intent="accent"></ui-avatar>
        <div class="profile-info">
          <div class="profile-name">
            Kim Granlund
            <ui-badge intent="success">Active</ui-badge>
          </div>
          <div class="profile-meta">Senior Product Designer &middot; Design Team &middot; Joined Mar 2023</div>
        </div>
        <div class="profile-actions">
          <ui-button size="sm">
            <ui-icon name="pencil-simple" slot="leading"></ui-icon>
            <span slot="label">Edit</span>
          </ui-button>
          <ui-button size="sm" intent="danger">
            <ui-icon name="trash" slot="leading"></ui-icon>
            <span slot="label">Delete</span>
          </ui-button>
        </div>
      </div>
    </ui-card>

    <!-- ── Tabs ── -->
    <ui-tabs value="overview">
      <ui-tab value="overview">Overview</ui-tab>
      <ui-tab value="activity">Activity</ui-tab>
      <ui-tab value="settings">Settings</ui-tab>

      <!-- ── Overview Panel ── -->
      <ui-tab-panel value="overview">
        <ui-stack gap="4">
        <div class="detail-grid">
          <ui-card>
            <h2>Personal Information</h2>
            <ui-stack gap="3">
              <div class="detail-item">
                <span class="detail-label">Full Name</span>
                <span class="detail-value">Kim Granlund</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Email</span>
                <span class="detail-value">kim.granlund@company.com</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Phone</span>
                <span class="detail-value">+1 (555) 234-5678</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Location</span>
                <span class="detail-value">San Francisco, CA</span>
              </div>
            </ui-stack>
          </ui-card>

          <ui-card>
            <h2>Work Information</h2>
            <ui-stack gap="3">
              <div class="detail-item">
                <span class="detail-label">Department</span>
                <span class="detail-value">Design</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Role</span>
                <span class="detail-value">Admin</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Manager</span>
                <span class="detail-value">Sarah Mitchell</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Employee ID</span>
                <span class="detail-value">EMP-2023-0472</span>
              </div>
            </ui-stack>
          </ui-card>
        </div>

        <!-- ── Recent Projects ── -->
        <ui-card>
          <h2>Recent Projects</h2>
          <ui-table style="grid-template-columns: 2fr 1fr 100px 100px;">
            <ui-table-head>
              <ui-table-row>
                <ui-table-header>Project</ui-table-header>
                <ui-table-header>Team</ui-table-header>
                <ui-table-header>Status</ui-table-header>
                <ui-table-header>Hours</ui-table-header>
              </ui-table-row>
            </ui-table-head>
            <ui-table-body>
              <ui-table-row>
                <ui-table-cell>Design System v3.0</ui-table-cell>
                <ui-table-cell>Platform</ui-table-cell>
                <ui-table-cell><ui-badge intent="success">Active</ui-badge></ui-table-cell>
                <ui-table-cell>142</ui-table-cell>
              </ui-table-row>
              <ui-table-row>
                <ui-table-cell>Mobile App Redesign</ui-table-cell>
                <ui-table-cell>Mobile</ui-table-cell>
                <ui-table-cell><ui-badge intent="info">In Review</ui-badge></ui-table-cell>
                <ui-table-cell>86</ui-table-cell>
              </ui-table-row>
              <ui-table-row>
                <ui-table-cell>Dashboard Analytics</ui-table-cell>
                <ui-table-cell>Data</ui-table-cell>
                <ui-table-cell><ui-badge>Completed</ui-badge></ui-table-cell>
                <ui-table-cell>64</ui-table-cell>
              </ui-table-row>
              <ui-table-row>
                <ui-table-cell>Onboarding Flow</ui-table-cell>
                <ui-table-cell>Growth</ui-table-cell>
                <ui-table-cell><ui-badge>Completed</ui-badge></ui-table-cell>
                <ui-table-cell>38</ui-table-cell>
              </ui-table-row>
            </ui-table-body>
          </ui-table>
        </ui-card>
        </ui-stack>
      </ui-tab-panel>

      <!-- ── Activity Panel ── -->
      <ui-tab-panel value="activity">
        <ui-card>
          <h2>Recent Activity</h2>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Updated the <strong>Design System v3.0</strong> project status to "Active"</div>
              <span class="activity-time">2 hours ago</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Commented on <strong>Mobile App Redesign</strong> pull request #247</div>
              <span class="activity-time">5 hours ago</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Completed code review for <strong>Dashboard Analytics</strong> feature branch</div>
              <span class="activity-time">Yesterday at 4:32 PM</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Added 3 new components to the <strong>component library</strong></div>
              <span class="activity-time">Yesterday at 11:15 AM</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Merged <strong>Onboarding Flow</strong> into production</div>
              <span class="activity-time">Feb 18, 2026</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Updated profile information and avatar</div>
              <span class="activity-time">Feb 17, 2026</span>
            </div>
          </div>
          <div class="activity-item">
            <span class="activity-dot"></span>
            <div class="activity-content">
              <div>Joined the <strong>Platform</strong> team</div>
              <span class="activity-time">Feb 15, 2026</span>
            </div>
          </div>
        </ui-card>
      </ui-tab-panel>

      <!-- ── Settings Panel ── -->
      <ui-tab-panel value="settings">
        <ui-stack gap="4">
        <div class="detail-grid">
          <ui-card>
            <h2>Notifications</h2>
            <div class="settings-row">
              <div>
                <div class="settings-label">Email notifications</div>
                <div class="settings-description">Receive email updates about activity</div>
              </div>
              <ui-switch checked></ui-switch>
            </div>
            <div class="settings-row">
              <div>
                <div class="settings-label">Push notifications</div>
                <div class="settings-description">Receive push notifications on your device</div>
              </div>
              <ui-switch checked></ui-switch>
            </div>
            <div class="settings-row">
              <div>
                <div class="settings-label">Weekly digest</div>
                <div class="settings-description">Get a weekly summary of activity</div>
              </div>
              <ui-switch></ui-switch>
            </div>
          </ui-card>

          <ui-card>
            <h2>Security</h2>
            <div class="settings-row">
              <div>
                <div class="settings-label">Two-factor authentication</div>
                <div class="settings-description">Add an extra layer of security</div>
              </div>
              <ui-button size="xs">
                <span slot="label">Enable</span>
              </ui-button>
            </div>
            <div class="settings-row">
              <div>
                <div class="settings-label">Password</div>
                <div class="settings-description">Last changed 30 days ago</div>
              </div>
              <ui-button size="xs">
                <span slot="label">Change</span>
              </ui-button>
            </div>
            <div class="settings-row">
              <div>
                <div class="settings-label">Active sessions</div>
                <div class="settings-description">2 devices currently signed in</div>
              </div>
              <ui-button size="xs">
                <span slot="label">Manage</span>
              </ui-button>
            </div>
          </ui-card>
        </div>

        <ui-card>
          <h2 style="color: var(--danger-ink-strong);">Danger Zone</h2>
          <div class="settings-row">
            <div>
              <div class="settings-label">Deactivate account</div>
              <div class="settings-description">Temporarily disable this user's access to the platform</div>
            </div>
            <ui-button size="xs" intent="danger">
              <span slot="label">Deactivate</span>
            </ui-button>
          </div>
          <div class="settings-row">
            <div>
              <div class="settings-label">Delete account</div>
              <div class="settings-description">Permanently remove this user and all associated data</div>
            </div>
            <ui-button variant="primary" size="xs" intent="danger">
              <ui-icon name="trash" slot="leading"></ui-icon>
              <span slot="label">Delete Account</span>
            </ui-button>
          </div>
        </ui-card>
        </ui-stack>
      </ui-tab-panel>
    </ui-tabs>
    </ui-stack>
  </main>
  <style is:global>
    .profile-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .profile-info {
      flex: 1;
      min-width: 12rem;
    }

    .profile-name {
      font-size: 1.25rem;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .profile-meta {
      font-size: 0.875rem;
      color: var(--neutral-ink-muted);
      margin-top: 0.25rem;
    }

    .profile-actions {
      display: flex;
      gap: 0.5rem;
    }

    .detail-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    @media (max-width: 40rem) {
      .detail-grid {
        grid-template-columns: 1fr;
      }
    }

    .detail-item {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .detail-label {
      font-size: 0.75rem;
      font-weight: 500;
      color: var(--neutral-ink-muted);
      text-transform: uppercase;
      letter-spacing: 0.03em;
    }

    .detail-value {
      font-size: 0.875rem;
      font-weight: 500;
    }

    .activity-item {
      display: flex;
      gap: 0.75rem;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--neutral-border-muted);
      font-size: 0.875rem;
    }

    .activity-item:last-child {
      border-bottom: none;
    }

    .activity-dot {
      width: 0.5rem;
      height: 0.5rem;
      border-radius: 50%;
      background: var(--accent-500);
      margin-top: 0.375rem;
      flex-shrink: 0;
    }

    .activity-content {
      flex: 1;
    }

    .activity-time {
      color: var(--neutral-ink-muted);
      font-size: 0.75rem;
    }

    .settings-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0.75rem 0;
      border-bottom: 1px solid var(--neutral-border-muted);
    }

    .settings-row:last-child {
      border-bottom: none;
    }

    .settings-label {
      font-size: 0.875rem;
      font-weight: 500;
    }

    .settings-description {
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
    }
</style>

</SidebarLayout>
