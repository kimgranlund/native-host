---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="Account Settings">
  <main>
<h1>Account Settings</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Full account settings page with profile, notification, security, and danger zone sections.
    </p>

    <div class="settings-container">

      <!-- ── Profile Section ── -->

      <ui-stack gap="0">
        <ui-section>
          <span slot="heading">Profile</span>
          <span slot="description">Your public profile information. This is visible to other users.</span>

          <ui-stack gap="4">
            <div class="avatar-row">
              <ui-avatar name="Kim Granlund" size="lg" intent="accent"></ui-avatar>
              <div class="avatar-info">
                <span class="avatar-name">Kim Granlund</span>
                <span class="avatar-hint">JPG, PNG or GIF. 1MB max.</span>
              </div>
              <ui-button size="sm">
                <span slot="label">Change</span>
              </ui-button>
            </div>

            <ui-field required>
              <label slot="label">Display name</label>
              <ui-input placeholder="Your display name" value="Kim Granlund" name="display_name"></ui-input>
            </ui-field>

            <ui-field>
              <label slot="label">Email</label>
              <ui-input type="email" placeholder="you@example.com" value="kim@nonoun.com" name="email">
                <ui-icon name="envelope" slot="leading"></ui-icon>
              </ui-input>
              <span slot="description">Used for notifications and account recovery.</span>
            </ui-field>

            <ui-field>
              <label slot="label">Bio</label>
              <ui-textarea placeholder="Write a few sentences about yourself..." name="bio" rows="3">Product designer focused on design systems, interaction patterns, and accessible interfaces.</ui-textarea>
            </ui-field>

            <div class="section-actions">
              <ui-button variant="primary" intent="accent">
                <span slot="label">Save Profile</span>
              </ui-button>
            </div>
          </ui-stack>
        </ui-section>

        <!-- ── Notifications Section ── -->

        <ui-section divider>
          <span slot="heading">Notifications</span>
          <span slot="description">Choose how and when you want to be notified.</span>

          <ui-stack gap="0">
            <div class="notification-row">
              <div>
                <div class="notification-label">Email notifications</div>
                <div class="notification-description">Receive email updates about account activity and mentions.</div>
              </div>
              <ui-switch name="notif_email" checked </ui-switch>
            </div>
            <div class="notification-row">
              <div>
                <div class="notification-label">Push notifications</div>
                <div class="notification-description">Get push notifications on your desktop and mobile devices.</div>
              </div>
              <ui-switch name="notif_push" </ui-switch>
            </div>
            <div class="notification-row">
              <div>
                <div class="notification-label">Marketing emails</div>
                <div class="notification-description">Receive tips, product updates, and promotional offers.</div>
              </div>
              <ui-switch name="notif_marketing" </ui-switch>
            </div>

            <div class="section-actions">
              <ui-button variant="primary" intent="accent">
                <span slot="label">Save Preferences</span>
              </ui-button>
            </div>
          </ui-stack>
        </ui-section>

        <!-- ── Security Section ── -->

        <ui-section divider>
          <span slot="heading">Security</span>
          <span slot="description">Update your password. We recommend using a strong, unique password.</span>

          <form>
            <ui-stack gap="4">
              <ui-field required>
                <label slot="label">Current password</label>
                <ui-input type="password" placeholder="Enter current password" name="current_password">
                  <ui-icon name="lock" slot="leading"></ui-icon>
                </ui-input>
              </ui-field>
              <ui-field required>
                <label slot="label">New password</label>
                <ui-input type="password" placeholder="Enter new password" name="new_password">
                  <ui-icon name="lock" slot="leading"></ui-icon>
                </ui-input>
                <span slot="description">Must be at least 8 characters with one uppercase and one number.</span>
              </ui-field>
              <ui-field required>
                <label slot="label">Confirm new password</label>
                <ui-input type="password" placeholder="Repeat new password" name="confirm_password">
                  <ui-icon name="lock" slot="leading"></ui-icon>
                </ui-input>
              </ui-field>
              <div class="section-actions">
                <ui-button variant="primary" intent="accent" type="submit">
                  <span slot="label">Update Password</span>
                </ui-button>
              </div>
            </ui-stack>
          </form>
        </ui-section>

        <!-- ── Danger Zone ── -->

        <ui-section divider>
          <span slot="heading">Danger Zone</span>

          <div class="danger-zone">
            <div class="danger-zone-row">
              <div class="danger-zone-text">
                <p class="danger-zone-heading">Delete account</p>
                <p class="danger-zone-description">
                  Permanently remove your account and all associated data. This action cannot be undone.
                </p>
              </div>
              <ui-button variant="primary" intent="danger">
                <ui-icon name="trash" slot="leading"></ui-icon>
                <span slot="label">Delete Account</span>
              </ui-button>
            </div>
          </div>
        </ui-section>

      </ui-stack>
    </div>
  </main>
  <style is:global>
    .settings-container {
      max-width: 40rem;
    }

    .settings-section-heading {
      font-size: 1rem;
      font-weight: 700;
      margin: 0;
    }

    .settings-section-description {
      font-size: 0.8125rem;
      color: var(--neutral-ink-muted);
      margin: calc(var(--_space) * 1) 0 0;
    }

    .avatar-row {
      display: flex;
      align-items: center;
      gap: calc(var(--_space) * 4);
    }

    .avatar-info {
      display: flex;
      flex-direction: column;
      gap: 0.125rem;
    }

    .avatar-name {
      font-weight: 600;
      font-size: 0.875rem;
    }

    .avatar-hint {
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
    }

    .notification-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-block: calc(var(--_space) * 3);
    }

    .notification-row + .notification-row {
      border-top: 1px solid var(--neutral-border-muted);
    }

    .notification-label {
      font-size: 0.875rem;
      font-weight: 500;
    }

    .notification-description {
      font-size: 0.75rem;
      color: var(--neutral-ink-muted);
      margin-top: 0.125rem;
    }

    .section-actions {
      display: flex;
      justify-content: flex-end;
      padding-top: calc(var(--_space) * 2);
    }

    .danger-zone {
      background: var(--danger-panel);
      border: 1px solid var(--danger-border-muted);
      border-radius: var(--_radius);
      padding: calc(var(--_space-k) * var(--_space));
    }

    .danger-zone-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: calc(var(--_space) * 4);
      flex-wrap: wrap;
    }

    .danger-zone-text {
      flex: 1;
      min-width: 12rem;
    }

    .danger-zone-heading {
      font-size: 0.875rem;
      font-weight: 600;
      color: var(--danger-ink-strong);
      margin: 0;
    }

    .danger-zone-description {
      font-size: 0.75rem;
      color: var(--danger-ink-muted);
      margin: calc(var(--_space) * 1) 0 0;
    }
</style>

</SidebarLayout>
