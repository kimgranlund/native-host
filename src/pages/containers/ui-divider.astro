---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-divider">
  <main>
<h1>&lt;ui-divider&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Horizontal or vertical rule between content sections. CSS-only container.
    </p>

    <!-- ── Basic ── -->

    <h2>Horizontal (default)</h2>
    <div class="layout-section">
      <p>Content above the divider.</p>
      <ui-divider></ui-divider>
      <p>Content below the divider.</p>
    <pre class="layout-code"><code>&lt;p&gt;Content above the divider.&lt;/p&gt;
&lt;ui-divider&gt;&lt;/ui-divider&gt;
&lt;p&gt;Content below the divider.&lt;/p&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── With Label ── -->

    <h2>With Label</h2>
    <div class="layout-section">
      <p>Sign in with your account.</p>
      <ui-divider>or</ui-divider>
      <p>Continue as guest.</p>
    </div>

    <div class="layout-section">
      <ui-divider>or continue with</ui-divider>
    <pre class="layout-code"><code>&lt;ui-divider&gt;or&lt;/ui-divider&gt;

&lt;ui-divider&gt;or continue with&lt;/ui-divider&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Vertical ── -->

    <h2>Vertical</h2>
    <div class="layout-section">
      <div class="vertical-container">
        <span>Left</span>
        <ui-divider orientation="vertical"></ui-divider>
        <span>Right</span>
      </div>
    </div>

    <div class="layout-section">
      <div class="vertical-container">
        <span>One</span>
        <ui-divider orientation="vertical"></ui-divider>
        <span>Two</span>
        <ui-divider orientation="vertical"></ui-divider>
        <span>Three</span>
      </div>
      <pre class="layout-code"><code>&lt;div style="display: flex; align-items: center; gap: 1rem; height: 4rem;"&gt;
  &lt;span&gt;Left&lt;/span&gt;
  &lt;ui-divider orientation="vertical"&gt;&lt;/ui-divider&gt;
  &lt;span&gt;Right&lt;/span&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Vertical With Label ── -->

    <h2>Vertical With Label</h2>
    <div class="layout-section">
      <div class="vertical-container" style="height: 6rem;">
        <span>Left</span>
        <ui-divider orientation="vertical">or</ui-divider>
        <span>Right</span>
      </div>
      <pre class="layout-code"><code>&lt;ui-divider orientation="vertical"&gt;or&lt;/ui-divider&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes (inherit from parent)</h2>
    <div class="layout-section">
      <h3>size="xs"</h3>
      <div size="xs">
        <ui-divider>xs label</ui-divider>
      </div>
      <h3>size="sm"</h3>
      <div size="sm">
        <ui-divider>sm label</ui-divider>
      </div>
      <h3>size="md"</h3>
      <div size="md">
        <ui-divider>md label</ui-divider>
      </div>
      <h3>size="lg"</h3>
      <div size="lg">
        <ui-divider>lg label</ui-divider>
      </div>
      <h3>size="xl"</h3>
      <div size="xl">
        <ui-divider>xl label</ui-divider>
      </div>
      <pre class="layout-code"><code>&lt;div size="sm"&gt;
  &lt;ui-divider&gt;sm label&lt;/ui-divider&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Composition ── -->

    <h2>Composition (with buttons)</h2>
    <div class="layout-section">
      <ui-button variant="primary" intent="accent" style="width: 100%;"><span slot="label">Sign In</span></ui-button>
      <ui-divider>or continue with</ui-divider>
      <div style="display: flex; gap: 0.5rem;">
        <ui-button style="flex: 1;"><ui-icon name="google-logo" slot="leading"></ui-icon><span slot="label">Google</span></ui-button>
        <ui-button style="flex: 1;"><ui-icon name="github-logo" slot="leading"></ui-icon><span slot="label">GitHub</span></ui-button>
      </div>
      <pre class="layout-code"><code>&lt;ui-button variant="primary" intent="accent" style="width: 100%;"&gt;Sign In&lt;/ui-button&gt;
&lt;ui-divider&gt;or continue with&lt;/ui-divider&gt;
&lt;div style="display: flex; gap: 0.5rem;"&gt;
  &lt;ui-button style="flex: 1;"&gt;Google&lt;/ui-button&gt;
  &lt;ui-button style="flex: 1;"&gt;GitHub&lt;/ui-button&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>
  </main>

  <script>
// ── Copy buttons ──

      for (const btn of document.querySelectorAll('.copy-btn')) {
        btn.addEventListener('click', async () => {
          const code = btn.closest('.layout-code')?.querySelector('code');
          if (!code) return;
          await navigator.clipboard.writeText(code.textContent);
          const icon = btn.querySelector('ui-icon');
          if (icon) {
            icon.setAttribute('name', 'check');
            setTimeout(() => { icon.setAttribute('name', 'copy'); }, 1500);
          }
        });
      }
  </script>
  <style is:global>
    .vertical-container {
      display: flex;
      align-items: center;
      gap: 1rem;
      height: 4rem;
    }

    /* ── Code Blocks ── */
</style>

</SidebarLayout>
