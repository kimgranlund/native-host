---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-toolbar">
  <main>
<h1>&lt;ui-toolbar&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Horizontal action bar for grouping related controls. Minimal custom element with role="toolbar" and roving keyboard focus.
    </p>

    <!-- ── Text Formatting ── -->

    <h2>Text Formatting</h2>
    <div class="layout-section">
      <ui-toolbar aria-label="Text formatting">
        <ui-button variant="ghost"><ui-icon name="text-b"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="text-italic"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="text-underline"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="text-strikethrough"></ui-icon></ui-button>
        <ui-divider orientation="vertical"></ui-divider>
        <ui-button variant="ghost"><ui-icon name="text-align-left"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="text-align-center"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="text-align-right"></ui-icon></ui-button>
        <ui-divider orientation="vertical"></ui-divider>
        <ui-button variant="ghost"><ui-icon name="list-bullets"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="list-numbers"></ui-icon></ui-button>
      </ui-toolbar>
      <div class="editor-area">The quick brown fox jumps over the lazy dog.</div>
    <pre class="layout-code"><code>&lt;ui-toolbar aria-label="Text formatting"&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="text-b"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="text-italic"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
  &lt;ui-divider orientation="vertical"&gt;&lt;/ui-divider&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="text-align-left"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
&lt;/ui-toolbar&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Document Actions ── -->

    <h2>Document Actions</h2>
    <div class="layout-section">
      <ui-toolbar aria-label="Document actions">
        <ui-button variant="ghost"><ui-icon name="floppy-disk" slot="leading"></ui-icon><span slot="label">Save</span></ui-button>
        <ui-button variant="ghost"><ui-icon name="download" slot="leading"></ui-icon><span slot="label">Export</span></ui-button>
        <ui-button variant="ghost"><ui-icon name="printer" slot="leading"></ui-icon><span slot="label">Print</span></ui-button>
        <ui-divider orientation="vertical"></ui-divider>
        <ui-button variant="ghost"><ui-icon name="arrow-counter-clockwise" slot="leading"></ui-icon><span slot="label">Undo</span></ui-button>
        <ui-button variant="ghost"><ui-icon name="arrow-clockwise" slot="leading"></ui-icon><span slot="label">Redo</span></ui-button>
      </ui-toolbar>
    <pre class="layout-code"><code>&lt;ui-toolbar aria-label="Document actions"&gt;
  &lt;ui-button variant="ghost"&gt;
    &lt;ui-icon name="floppy-disk" slot="leading"&gt;&lt;/ui-icon&gt;
    &lt;span slot="label"&gt;Save&lt;/span&gt;
  &lt;/ui-button&gt;
  &lt;ui-divider orientation="vertical"&gt;&lt;/ui-divider&gt;
  &lt;ui-button variant="ghost"&gt;
    &lt;ui-icon name="arrow-counter-clockwise" slot="leading"&gt;&lt;/ui-icon&gt;
    &lt;span slot="label"&gt;Undo&lt;/span&gt;
  &lt;/ui-button&gt;
&lt;/ui-toolbar&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Media Controls ── -->

    <h2>Media Controls</h2>
    <div class="layout-section">
      <ui-toolbar aria-label="Media playback">
        <ui-button variant="ghost"><ui-icon name="skip-back"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="play"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="skip-forward"></ui-icon></ui-button>
        <ui-divider orientation="vertical"></ui-divider>
        <ui-button variant="ghost"><ui-icon name="speaker-high"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="shuffle"></ui-icon></ui-button>
        <ui-button variant="ghost"><ui-icon name="repeat"></ui-icon></ui-button>
      </ui-toolbar>
    <pre class="layout-code"><code>&lt;ui-toolbar aria-label="Media playback"&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="skip-back"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="play"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="skip-forward"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
  &lt;ui-divider orientation="vertical"&gt;&lt;/ui-divider&gt;
  &lt;ui-button variant="ghost"&gt;&lt;ui-icon name="speaker-high"&gt;&lt;/ui-icon&gt;&lt;/ui-button&gt;
&lt;/ui-toolbar&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <ui-stack gap="4">
        <ui-toolbar aria-label="Small toolbar" size="sm">
          <ui-button variant="ghost"><ui-icon name="magnifying-glass"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="funnel"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="sort-ascending"></ui-icon></ui-button>
        </ui-toolbar>
        <ui-toolbar aria-label="Default toolbar">
          <ui-button variant="ghost"><ui-icon name="magnifying-glass"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="funnel"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="sort-ascending"></ui-icon></ui-button>
        </ui-toolbar>
        <ui-toolbar aria-label="Large toolbar" size="lg">
          <ui-button variant="ghost"><ui-icon name="magnifying-glass"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="funnel"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="sort-ascending"></ui-icon></ui-button>
        </ui-toolbar>
      </ui-stack>
    <pre class="layout-code"><code>&lt;ui-toolbar aria-label="Small" size="sm"&gt;...&lt;/ui-toolbar&gt;
&lt;ui-toolbar aria-label="Default"&gt;...&lt;/ui-toolbar&gt;
&lt;ui-toolbar aria-label="Large" size="lg"&gt;...&lt;/ui-toolbar&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Density ── -->

    <h2>Density</h2>
    <div class="layout-section">
      <ui-stack gap="4">
        <ui-toolbar aria-label="Compact" density="compact">
          <ui-button variant="ghost"><ui-icon name="copy"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="scissors"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="clipboard"></ui-icon></ui-button>
        </ui-toolbar>
        <ui-toolbar aria-label="Default density">
          <ui-button variant="ghost"><ui-icon name="copy"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="scissors"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="clipboard"></ui-icon></ui-button>
        </ui-toolbar>
        <ui-toolbar aria-label="Loose" density="loose">
          <ui-button variant="ghost"><ui-icon name="copy"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="scissors"></ui-icon></ui-button>
          <ui-button variant="ghost"><ui-icon name="clipboard"></ui-icon></ui-button>
        </ui-toolbar>
      </ui-stack>
    <pre class="layout-code"><code>&lt;ui-toolbar density="compact"&gt;...&lt;/ui-toolbar&gt;
&lt;ui-toolbar&gt;...&lt;/ui-toolbar&gt;
&lt;ui-toolbar density="loose"&gt;...&lt;/ui-toolbar&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>
  </main>

  <script>
// ── Copy buttons ──

      for (const btn of document.querySelectorAll('.copy-btn')) {
        btn.addEventListener('click', async () => {
          const code = btn.closest('.layout-code')?.querySelector('code');
          if (!code) return;
          await navigator.clipboard.writeText(code.textContent);
          const icon = btn.querySelector('ui-icon');
          if (icon) {
            icon.setAttribute('name', 'check');
            setTimeout(() => { icon.setAttribute('name', 'copy'); }, 1500);
          }
        });
      }
  </script>
  <style is:global>
    .editor-area {
      margin-top: 0.75rem;
      padding: 0.75rem;
      border: 1px solid var(--neutral-border-muted);
      border-radius: 0.25rem;
      min-height: 4rem;
      font-size: 0.875rem;
      color: var(--neutral-ink-muted);
    }

    /* ── Code Blocks ── */
</style>

</SidebarLayout>
