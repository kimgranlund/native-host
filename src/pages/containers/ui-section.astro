---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-section">
  <main>
<h1>&lt;ui-section&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Semantic content section with heading, description, and optional collapse. Minimal custom element.
    </p>

    <!-- ── Basic ── -->

    <h2>Basic</h2>
    <div class="layout-section">
      <ui-section>
        <span slot="heading">Account Settings</span>
        <span slot="description">Manage your account preferences and personal information.</span>
        <ui-input placeholder="Display Name" value="Kim Granlund"></ui-input>
        <ui-input placeholder="Email" value="kim@example.com"></ui-input>
      </ui-section>
    <pre class="layout-code"><code>&lt;ui-section&gt;
  &lt;span slot="heading"&gt;Account Settings&lt;/span&gt;
  &lt;span slot="description"&gt;Manage your account preferences.&lt;/span&gt;
  &lt;ui-input placeholder="Display Name" value="Kim Granlund"&gt;&lt;/ui-input&gt;
  &lt;ui-input placeholder="Email" value="kim@example.com"&gt;&lt;/ui-input&gt;
&lt;/ui-section&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── With Divider ── -->

    <h2>With Divider</h2>
    <div class="layout-section">
      <ui-stack gap="0">
        <ui-section>
          <span slot="heading">Profile</span>
          <ui-input placeholder="Display Name" value="Kim Granlund"></ui-input>
          <ui-input placeholder="Bio"></ui-input>
        </ui-section>
        <ui-section divider>
          <span slot="heading">Notifications</span>
          <ui-switch checked>Email notifications</ui-switch>
          <ui-switch>Push notifications</ui-switch>
        </ui-section>
        <ui-section divider>
          <span slot="heading">Security</span>
          <ui-input placeholder="Current password" type="password"></ui-input>
          <ui-input placeholder="New password" type="password"></ui-input>
        </ui-section>
      </ui-stack>
    <pre class="layout-code"><code>&lt;ui-stack gap="0"&gt;
  &lt;ui-section&gt;
    &lt;span slot="heading"&gt;Profile&lt;/span&gt;
    &lt;ui-input placeholder="Display Name"&gt;&lt;/ui-input&gt;
  &lt;/ui-section&gt;
  &lt;ui-section divider&gt;
    &lt;span slot="heading"&gt;Notifications&lt;/span&gt;
    &lt;ui-switch checked&gt;Email notifications&lt;/ui-switch&gt;
  &lt;/ui-section&gt;
  &lt;ui-section divider&gt;
    &lt;span slot="heading"&gt;Security&lt;/span&gt;
    &lt;ui-input placeholder="Current password"&gt;&lt;/ui-input&gt;
  &lt;/ui-section&gt;
&lt;/ui-stack&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Collapsible ── -->

    <h2>Collapsible</h2>
    <div class="layout-section">
      <ui-stack gap="0">
        <ui-section collapsible>
          <span slot="heading">Advanced Settings</span>
          <ui-switch>Enable developer mode</ui-switch>
          <ui-switch>Show debug info</ui-switch>
          <ui-switch>Verbose logging</ui-switch>
        </ui-section>
        <ui-section collapsible collapsed divider>
          <span slot="heading">Experimental Features</span>
          <ui-switch>AI suggestions</ui-switch>
          <ui-switch>New editor</ui-switch>
        </ui-section>
      </ui-stack>
    <pre class="layout-code"><code>&lt;ui-section collapsible&gt;
  &lt;span slot="heading"&gt;Advanced Settings&lt;/span&gt;
  &lt;ui-switch&gt;Enable developer mode&lt;/ui-switch&gt;
&lt;/ui-section&gt;

&lt;ui-section collapsible collapsed&gt;
  &lt;span slot="heading"&gt;Experimental Features&lt;/span&gt;
  &lt;ui-switch&gt;AI suggestions&lt;/ui-switch&gt;
&lt;/ui-section&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Nested with Inset ── -->

    <h2>Nested with Inset</h2>
    <div class="layout-section">
      <ui-section>
        <span slot="heading">Privacy</span>
        <span slot="description">Control how your data is used.</span>
        <ui-inset>
          <ui-checkbox>Allow analytics tracking</ui-checkbox>
          <ui-checkbox>Share usage data with partners</ui-checkbox>
          <ui-checkbox checked>Send crash reports</ui-checkbox>
        </ui-inset>
      </ui-section>
    <pre class="layout-code"><code>&lt;ui-section&gt;
  &lt;span slot="heading"&gt;Privacy&lt;/span&gt;
  &lt;span slot="description"&gt;Control how your data is used.&lt;/span&gt;
  &lt;ui-inset&gt;
    &lt;ui-checkbox&gt;Allow analytics tracking&lt;/ui-checkbox&gt;
    &lt;ui-checkbox checked&gt;Send crash reports&lt;/ui-checkbox&gt;
  &lt;/ui-inset&gt;
&lt;/ui-section&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>
  </main>

  <script>
// ── Copy buttons ──

      for (const btn of document.querySelectorAll('.copy-btn')) {
        btn.addEventListener('click', async () => {
          const code = btn.closest('.layout-code')?.querySelector('code');
          if (!code) return;
          await navigator.clipboard.writeText(code.textContent);
          const icon = btn.querySelector('ui-icon');
          if (icon) {
            icon.setAttribute('name', 'check');
            setTimeout(() => { icon.setAttribute('name', 'copy'); }, 1500);
          }
        });
      }
  </script>
</SidebarLayout>
