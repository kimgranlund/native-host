---
import SidebarLayout from '../../layouts/SidebarLayout.astro';
---
<SidebarLayout title="ui-inset">
  <main>
<h1>&lt;ui-inset&gt;</h1>
    <p style="color: var(--neutral-ink-muted); font-size: 0.875rem; margin-bottom: 1.5rem;">
      Content indentation container. Adds consistent inline-start padding without visual surface. CSS-only container.
    </p>

    <!-- ── Basic ── -->

    <h2>Basic</h2>
    <div class="layout-section">
      <span style="font-weight: 500;">Parent heading</span>
      <ui-inset>
        <span>Indented child 1</span>
        <span>Indented child 2</span>
        <span>Indented child 3</span>
      </ui-inset>
    <pre class="layout-code"><code>&lt;span&gt;Parent heading&lt;/span&gt;
&lt;ui-inset&gt;
  &lt;span&gt;Indented child 1&lt;/span&gt;
  &lt;span&gt;Indented child 2&lt;/span&gt;
  &lt;span&gt;Indented child 3&lt;/span&gt;
&lt;/ui-inset&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── With Checkboxes ── -->

    <h2>Nested Checkboxes</h2>
    <div class="layout-section">
      <ui-checkbox checked>Select all</ui-checkbox>
      <ui-inset>
        <ui-checkbox checked>Option A</ui-checkbox>
        <ui-checkbox checked>Option B</ui-checkbox>
        <ui-checkbox>Option C</ui-checkbox>
      </ui-inset>
    <pre class="layout-code"><code>&lt;ui-checkbox checked&gt;Select all&lt;/ui-checkbox&gt;
&lt;ui-inset&gt;
  &lt;ui-checkbox checked&gt;Option A&lt;/ui-checkbox&gt;
  &lt;ui-checkbox checked&gt;Option B&lt;/ui-checkbox&gt;
  &lt;ui-checkbox&gt;Option C&lt;/ui-checkbox&gt;
&lt;/ui-inset&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>

    <!-- ── Sizes ── -->

    <h2>Sizes</h2>
    <div class="layout-section">
      <div size="sm">
        <span style="font-weight: 500; font-size: 0.8125rem;">sm parent</span>
        <ui-inset>
          <span style="font-size: 0.8125rem;">sm indented content</span>
        </ui-inset>
      </div>
      <div size="lg" style="margin-top: 1rem;">
        <span style="font-weight: 500;">lg parent</span>
        <ui-inset>
          <span>lg indented content</span>
        </ui-inset>
      </div>
      <pre class="layout-code"><code>&lt;div size="sm"&gt;
  &lt;span&gt;sm parent&lt;/span&gt;
  &lt;ui-inset&gt;
    &lt;span&gt;sm indented content&lt;/span&gt;
  &lt;/ui-inset&gt;
&lt;/div&gt;</code><ui-button class="copy-btn" size="sm" variant="ghost" aria-label="Copy"><ui-icon name="copy"></ui-icon></ui-button></pre>
    </div>
  </main>

  <script>
  import '../../scripts/copy-buttons';
</script>
</SidebarLayout>
