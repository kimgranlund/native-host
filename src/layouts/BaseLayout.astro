---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title} â€” native-ui</title>
    <style is:global>
      @import '@nonoun/native-ui/css/foundation';
      @import '@nonoun/native-ui/css/components';

    </style>
    <!-- Restore persisted state before first paint -->
    <script is:inline>
      document.documentElement.classList.add('ce-pending');
      try {
        if (localStorage.getItem('nav-color-scheme'))
          document.documentElement.style.colorScheme = localStorage.getItem('nav-color-scheme');
        if (localStorage.getItem('nav-sidebar-collapsed') === 'true')
          document.addEventListener('DOMContentLoaded', function() {
            var el = document.getElementById('layout-sidebar');
            if (el) el.setAttribute('collapsed', '');
          }, { once: true });
      } catch(e) {}
    </script>
    <style is:inline>html.ce-pending { visibility: hidden; }</style>
  </head>
  <body>
    <slot />
    <script>
      import '../scripts/icons';
      import '../scripts/setup';
      document.documentElement.classList.remove('ce-pending');
    </script>
  </body>
</html>
