---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title} — native-ui</title>
    <style is:global>
      @import '@nonoun/native-ui/css/foundation';
      @import '@nonoun/native-ui/css/components';

    </style>
    <!-- FOUC prevention — keep page hidden until custom elements are defined -->
    <script is:inline>document.documentElement.classList.add('ce-pending')</script>
    <style is:inline>html.ce-pending { visibility: hidden; }</style>
  </head>
  <body>
    <slot />
    <script>
      import '../scripts/icons';
      import '../scripts/setup';
      document.documentElement.classList.remove('ce-pending');
    </script>
  </body>
</html>
